    <move todir="MacOSX/JMRI" file="MacOSX/JMRI/scripts/MacOSXapps/V1/LocoTools.app" />
    <move todir="MacOSX/JMRI" file="MacOSX/JMRI/scripts/MacOSXapps/V1/CornwallRR.app" />
