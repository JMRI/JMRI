
# build a JBuilder project directory in standard form
# Note that this does not work from JBuilder itself!
jbuilder -a runtime jbuilderjava
# build the java/ directory, which contains the actual JBuilder project
jbuilderjava  -a jbuilder0 jbuilder1 java
jbuilder0 -d project/java scripts jmri.jpx
jbuilder1 -d project/java scripts JMRILibraries.library

java -a java1 java2 java3
java1 -d project/java/src &jmri &apps &resources
java2 -d project/java &test
java3 -d project/java &lib

runtime -d project xml lib resources defaultlcf
defaultlcf -d project scripts default.lcf

# ant target - Ant directory in standard form
ant -a xml lib resources defaultlcf antjava
# build the java/ directory, which contains the actual code & build.xml
antjava  -a ant0 ant1 ant2 ant3 ant4
ant0 -d java scripts build.xml
ant1 -d java/src &jmri &apps &resources
ant2 -d java &test
ant3 -d java &xml
ant4 -d java &lib

