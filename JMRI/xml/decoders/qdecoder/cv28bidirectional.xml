  <!-- Compliant to NMRA s-9.2.2_2012_10, created specifically for Qdecoder accessory decoder	-->
  <!-- 	this is normally for use with Railcom, which is not supported by Qdecoder so far		-->
  <!-- 	created as a provision for future usage, as this CVs is part of Qdecoder documentation	-->
  <variable CV="28" mask="XXXXXXXV" item="Decoder Controlled Transmission" default="0">
    <xi:include href="http://jmri.org/xml/decoders/parts/enum-disabledEnabled.xml"/>
    <label xml:lang="it">Decoder Controlled Transmission</label>
    <label xml:lang="fr">Transmission contrôlée par décodeur</label>
    <label xml:lang="de">Dekodergesteuerten Übertragung</label>
    <label>Decoder Controlled Transmission</label>
	<tooltip>Need to enable "Bi-Directional Communications" first (CV29 bit 3)</tooltip>
  </variable>
  <variable CV="28" mask="XXXXXXVX" item="Asymmetrical DCC Broadcast Transmission" default="0">
    <xi:include href="http://jmri.org/xml/decoders/parts/enum-disabledEnabled.xml"/>
    <label xml:lang="it">Asymmetrical DCC Broadcast Transmission</label>
    <label xml:lang="fr">Transmission par diffusion DCC asymétrique</label>
    <label xml:lang="de">Asymmetrischen DCC Broadcast Übertragung</label>
    <label>Asymmetrical DCC Broadcast Transmission</label>
	<tooltip>Need to enable "Bi-Directional Communications" first (CV29 bit 3)</tooltip>
  </variable>
  <variable CV="28" mask="XXXXXVXX" item="Broadcast Signal Controlled Influence" default="0">
    <xi:include href="http://jmri.org/xml/decoders/parts/enum-disabledEnabled.xml"/>
    <label xml:lang="it">Broadcast Signal Controlled Influence</label>
    <label xml:lang="fr">Diffusion contrôlée par influence du signal</label>
    <label xml:lang="de">Broadcast unter Nutzung von Signal Controlled Influence</label>
    <label>Broadcast Signal Controlled Influence</label>
	<tooltip>Need to enable "Bi-Directional Communications" first (CV29 bit 3)</tooltip>
  </variable>
</variables>
