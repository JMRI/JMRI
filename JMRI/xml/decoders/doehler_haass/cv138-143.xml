      <label xml:lang="de">Kupplungsablauf und Timer deaktivieren</label>
      <label xml:lang="ca">Desactiva enganx automàtic i temps</label>
    </variable>
    <variable item="Auto decoupling only in shunting speed" CV="143"  default="0" mask="VXXXXXXX" tooltip="CV143 Bit 7" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
