        <label xml:lang="de">Timer Warten</label>
        <label xml:lang="ca">Temps d'espera</label>
    </variable>
    <variable item="Away timer" CV="140" default="0" tooltip="CV140 (0-250, 1=100ms)" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
