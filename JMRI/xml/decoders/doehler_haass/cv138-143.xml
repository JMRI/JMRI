    <variable item="Push timer" CV="138" default="0" tooltip="CV138 (0-250, 1=100ms)" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
      <decVal min="0" max="250"/>
        <label>Push timer</label>
        <label xml:lang="fr">Timer pousse</label>
        <label xml:lang="de">Timer Heranfahren</label>
        <label xml:lang="ca">Temps de pulsació</label>
    </variable>
    <variable item="Wait timer" CV="139" default="0" tooltip="CV139 (0-250, 1=100ms)" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
