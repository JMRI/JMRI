        <label xml:lang="fr">Timer rebroussement</label>
        <label xml:lang="de">Timer Wegfahren</label>
        <label xml:lang="ca">Temps d'espera</label>
    </variable>
    <variable item="Speedstep for pushing" CV="141" default="12" tooltip="CV141 (0-127)" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
