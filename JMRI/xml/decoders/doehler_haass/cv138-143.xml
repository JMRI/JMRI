        <label xml:lang="de">Fahrstufe Heranfahren</label>
        <label xml:lang="ca">Pas de velictat per empenyer</label>
    </variable>
    <variable item="Speedstep for getting away" CV="142" default="12" tooltip="CV142 (0-127)" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
