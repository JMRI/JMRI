        <label xml:lang="ca">Pas de velocitat per marxar</label>
    </variable>
    <variable item="Deactivate auto decoupling and timer" CV="143"  default="0" mask="XVXXXXXX" tooltip="CV143 Bit 6" exclude="PD12A_2016.03,PD12A_2016.06,SD18A_1.00,SD18A_1.01,SD21A_1.01,SD18A_1.02,SD21A_1.02,SD18A_1.03,SD21A_1.03">
