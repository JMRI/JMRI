        <text> </text>
      </label>
      <display item="Route 6 Address"/>
      <label>
        <text> </text>
      </label>
      <display item="Route 7 Address"/>
      <label>
        <text> </text>
      </label>
      <display item="Route 8 Address"/>
      <label>
        <text> </text>
      </label>
    </column>
  </pane>
  <pane>
    <name>CVs</name>
    <column>
      <cvtable/>
    </column>
  </pane>
</decoder-config>
