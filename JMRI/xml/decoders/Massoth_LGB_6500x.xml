      </label>
    </column>
    <column>
      <label>
        <text>Wheel Sensor</text>
      </label>
      <label>
        <text> </text>
      </label>
      <separator/>
      <label>
        <text> </text>
      </label>
      <display item="Number of wheel magnets"/>
      <display item="Wheel diameter ratio"/>
      <label>
        <text> </text>
      </label>
      <label>
        <text> </text>
      </label>
      <label>
        <text> </text>
      </label>
      <label>
        <text> </text>
      </label>
    </column>
  </pane>
  <pane>
    <name>CVs</name>
    <column>
      <cvtable/>
    </column>
  </pane>
</decoder-config>
