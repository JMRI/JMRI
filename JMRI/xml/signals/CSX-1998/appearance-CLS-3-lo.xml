  <aspecttable>CSX</aspecttable>
  <name>Single 3 color light dwarf signal</name>
  <reference>As described in the CSX Transportation Signal Rules - 281-298 January 1998.</reference>
  <description>Appearances for a 3 lamp dwarf signal head without other badging</description>
  
  <appearances>

    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <reference>287 (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-lo/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>yellow</show>
      <reference>288 (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-lo/rule-288.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>lunar</show>
      <reference>290 (j)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-lo/rule-290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>292 (f)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-lo/rule-292.gif</imagelink>
    </appearance>

  </appearances>

    <specificappearances>
     <danger>
        <aspect>Stop</aspect>
     </danger>
     <held>
        <aspect>Stop</aspect>
     </held>
  </specificappearances>

