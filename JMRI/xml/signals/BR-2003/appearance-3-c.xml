<appearancetable
    xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation = "http://jmri.org/xml/schema/appearancetable.xsd"
>

  <copyright xmlns="http://docbook.org/ns/docbook">
    <year>2010</year><holder>JMRI</holder>
  </copyright>
  
  <authorgroup xmlns="http://docbook.org/ns/docbook">
    <author>
        <personname><firstname>Kevin</firstname><surname>Dickerson</surname></personname>

    </author>    
  </authorgroup>

  <revhistory xmlns="http://docbook.org/ns/docbook">
    <revision>
        <revnumber>1</revnumber>
        <date>2010-01-18</date>
        <authorinitials>KD</authorinitials>
        <revremark>Initial Version</revremark>
    </revision>
    <revision>
        <revnumber>1.1</revnumber>
        <date>2010-02-02</date>
        <authorinitials>KD</authorinitials>
        <revremark>Change Call On to Off</revremark>
    </revision>
    <revision>
        <revnumber>1.2</revnumber>
        <date>2011-08-04</date>
        <authorinitials>KD</authorinitials>
        <revremark>Addition of Specific Appearances and aspect mapping</revremark>
    </revision>  
  </revhistory>
  
  <aspecttable>BR</aspecttable>

  <name>3 Aspect Signal with Call On</name>
  
  <description>This uses a single head to control the main 3 aspects, with an additional head to control the Call-On</description>
  
  <appearances>

    <appearance>
      <aspectname>Proceed</aspectname>
      <show>green</show>
      <show>dark</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls3Proceed(wc).gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Proceed.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Caution</aspectname>
      <show>yellow</show>
      <show>dark</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls3Caution(wc).gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Caution.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Flash Caution</aspectname>
      <show>flashyellow</show>
      <show>dark</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls3FlashCaution(wc).gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/FlashCaution.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Danger</aspectname>
      <show>red</show>
      <show>dark</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls3Danger(wc).gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Danger.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Off</aspectname>
      <show>red</show>
      <show>lunar</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls3DangerCallOn.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/DangerCallOn.gif</imagelink>
    </appearance>

  </appearances>
  
  <specificappearances>
    <danger>
      <aspect>Danger</aspect>
    </danger>
    <permissive>
      <aspect>Off</aspect>
    </permissive>
    <held>
      <aspect>Danger</aspect>
    </held>
  </specificappearances>
  
  <aspectMappings>
   <aspectMapping>
     <advancedAspect>Danger</advancedAspect>
     <ourAspect>Caution</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Caution</advancedAspect>
     <ourAspect>Proceed</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Proceed</advancedAspect>
     <ourAspect>Proceed</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Flash Caution</advancedAspect>
     <ourAspect>Proceed</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Preliminary Caution</advancedAspect>
     <ourAspect>Proceed</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Flash Preliminary Caution</advancedAspect>
     <ourAspect>Proceed</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>Off</advancedAspect>
     <ourAspect>Caution</ourAspect>
   </aspectMapping>
   
   <aspectMapping>
     <advancedAspect>On</advancedAspect>
     <ourAspect>Caution</ourAspect>
   </aspectMapping>
  </aspectMappings>
</appearancetable>  
