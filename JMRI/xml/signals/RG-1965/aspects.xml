  <aspects>

    <aspect>
      <name>Clear</name>
      <rule>Rule 281</rule>
      <indication>Proceed</indication>
      <reference></reference>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Diverging Approach Medium</name>
      <rule>Rule 281B</rule>
      <indication>Proceed approaching next signal at medium speed (only) within interlocking limits</indication>
      <reference></reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Approach Medium</name>
      <rule>Rule 282</rule>
      <indication>Proceed approaching next signal at medium speed</indication>
      <reference></reference>
      <speed>Limited</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Diverging Clear</name>
      <rule>Rule 283</rule>
      <indication>Proceed; medium speed (only) within interlocking limits</indication>
      <reference></reference>
      <speed>Limited</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Approach</name>
      <rule>Rule 285</rule>
      <indication>Proceed preparing to stop at next signal. Train exceeding medium speed must at once reduce to that speed.</indication>
      <reference></reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Diverging Approach</name>
      <rule>Rule 286</rule>
      <indication>Proceed at slow speed (only) within interlocking limits, preparing to stop at next signal.</indication>
      <reference></reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Restricting</name>
      <rule>Rule 290</rule>
      <indication>Proceed at restricted speed.</indication>
      <reference></reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Stop and Proceed</name>
      <rule>Rule 291</rule>
      <indication>Stop; then proceed at restricted speed.</indication>
      <reference></reference>
      <speed>Stop</speed>
      <speed2>Restricted</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Stop</name>
      <rule>Rule 292</rule>
      <indication>Stop.</indication>
      <reference></reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
    </aspect>

  </aspects>

  <appearancefiles>
    <appearancefile href="appearance-SL-1-high-abs.xml"/>
    <appearancefile href="appearance-SL-1-high-pbs.xml"/>
    <appearancefile href="appearance-SL-1-low-abs.xml"/>
    <appearancefile href="appearance-SL-1-low-pbs.xml"/>
    <appearancefile href="appearance-SL-2-high-abs.xml"/>
    <appearancefile href="appearance-SL-2-high-pbs.xml"/>
    <appearancefile href="appearance-SL-2-low-abs.xml"/>
    <appearancefile href="appearance-SL-2-low-pbs.xml"/>
    <appearancefile href="appearance-SL-3-high-abs.xml"/>
    <appearancefile href="appearance-SL-3-high-pbs.xml"/>
  </appearancefiles>
  
</aspecttable>
  
