  <aspecttable>RG-1965</aspecttable>
  <name>Single searchlight high absolute signal</name>
  <reference>As described in the 1965 version of the RG publication "Rio Grande Rules of Operating Department".</reference>
  <description>Appearances for an absolute (RG: Positive) one-searchlight signal with (P)-badge</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <reference>Rule 281</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/RG-1965/SL-1-high-abs/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>flashyellow</show>
      <reference>Rule 282</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/RG-1965/SL-1-high-abs/rule-282.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <reference>Rule 285</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/RG-1965/SL-1-high-abs/rule-285.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Restricting</aspectname>
      <show>lunar</show>
      <reference>Rule 290</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/RG-1965/SL-1-high-abs/rule-290.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>Rule 292</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/RG-1965/SL-1-high-abs/rule-292.gif</imagelink>
    </appearance>

  </appearances>

  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach Medium</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

   <aspectMapping>
      <advancedAspect>Approach Medium</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Proceed</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

     <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

  </aspectMappings>

</appearancetable>  
