  <aspecttable>B&amp;O 1957</aspecttable>
  <name>Single head dwarf signal</name>
  <reference>As described in the August 1946 version of the AAR publication "American Railway Signaling Principles and Practices", chapter II.</reference>
  <description>Appearances for a one-searchlight dwarf signal head without other badging</description>
  
  <appearances>

    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <reference>Page 48 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>yellow</show>
      <reference>Page 49 D</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>Page 50 E</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-292.gif</imagelink>
    </appearance>

  </appearances>

  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

