  <aspecttable>B&amp;O 1957</aspecttable>
  <name>Single searchlight high permissive signal</name>
  <reference>As described in the August 1946 version of the AAR publication "American Railway Signaling Principles and Practices", chapter II.</reference>
  <description>Appearances for one-searchlight signal head with number or letter plate</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <reference>Page 42 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-high-pbs/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <reference>Page 47 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-high-pbs/rule-285.gif</imagelink>
    </appearance>

    <appearance>
