      <show>yellow</show>
      <reference>Page 49</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-high-pbs/rule-289.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop and Proceed</aspectname>
      <show>red</show>
      <reference>Page 50 B</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-high-pbs/rule-291.gif</imagelink>
    </appearance>
  </appearances>

