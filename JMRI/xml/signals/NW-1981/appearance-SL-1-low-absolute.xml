  <aspecttable>N&amp;W 1981</aspecttable>
  <name>Color Light Single Arm Absolute Dwarf Signal</name>
  <reference>As described in the 1981 version of the Norfolk and Western Railroad Operating Rules.</reference>
  <description>Appearances for N&amp;W single head absolute color light dwarf signals.</description>

  <appearances>

    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <reference>Page 64</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-SL-1-low-absolute/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>flashyellow</show>
      <reference>Page 64</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-SL-1-low-absolute/rule-288.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>yellow</show>
      <reference>Page 65</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-SL-1-low-absolute/rule-290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop and Stay</aspectname>
      <show>red</show>
      <reference>Page 66</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-SL-1-low-absolute/rule-292.gif</imagelink>
    </appearance>

  </appearances>

  <specificappearances>

    <danger>
      <aspect>Stop and Stay</aspect>
    </danger>

    <permissive>
      <aspect>Restricting</aspect>
    </permissive>

    <held>
      <aspect>Stop and Stay</aspect>
    </held>

  </specificappearances>

  <aspectMappings>

    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach Diverging</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Advance Approach</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach Diverging</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Clear</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Approach</advancedAspect>
      <ourAspect>Slow Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Proceed</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Stay</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

  </aspectMappings>

</appearancetable>
