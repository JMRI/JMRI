  <aspecttable>basic</aspecttable>
  <name>Single searchlight low signal</name>
  <reference>(similar to basic signals described in various magazine articles)</reference>
  <description>A simple signal for use as e.g. a block signal</description>
  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-287.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-290.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/SL-1-low/rule-292.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Unlit</aspectname>
      <show>dark</show>
      <imagelink>../../../resources/icons/smallschematics/searchlights/one-low-dark.gif</imagelink>
    </appearance>
  </appearances>
  <specificappearances>
    <!-- Start of Specific Appearances list -->
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
      <imagelink>../../../resources/icons/smallschematics/searchlights/one-low-held.gif</imagelink>
    </held>
    <dark>
      <aspect>Unlit</aspect>
    </dark>
  </specificappearances>
  <!-- End of Specific Appearances list -->
  <aspectMappings>
    <!-- Start of Aspect Mapping -->
    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Diverging Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>
  </aspectMappings>
  <!-- End of Aspect Mapping -->
</appearancetable>