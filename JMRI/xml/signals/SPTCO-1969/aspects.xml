  <aspects>
    <aspect>
      <name>Block Signal Green</name>
      <rule>Rules 281 and 282</rule>
      <indication>Proceed</indication>
      <reference>Page 79-80</reference>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>23</dccAspect>
    </aspect>
    <aspect>
      <name>Block Signal Green for Diverging Route</name>
      <rule>Rule 283</rule>
      <indication>Proceed on diverging route</indication>
      <reference>Page 81</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
      <dccAspect>14</dccAspect>
    </aspect>
    <aspect>
      <name>Block Signal Yellow over Green</name>
      <rule>Rule 284</rule>
      <indication>Reduce to medium speed and proceed. Next signal indicates "Proceed on diverging route"</indication>
      <reference>Page 81</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
      <dccAspect>21</dccAspect>
    </aspect>
    <aspect>
      <name>Approach Signal Yellow</name>
      <rule>Rule 285 and 286</rule>
      <indication>Proceed not exceeding medium speed, prepared to stop short of next home signal.</indication>
      <reference>Page 82 and 84</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
      <dccAspect>17</dccAspect>
    </aspect>
    <aspect>
      <name>Approach Medium - Flashing Yellow</name>
      <rule>Rule 285-A</rule>
      <indication>Proceed prepared to pass next signal at not exceeding medium speed.</indication>
      <reference>Page 83</reference>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
      <dccAspect>20</dccAspect>
    </aspect>
    <aspect>
      <name>Restricting</name>
      <rule>Rule 287 and 290-A</rule>
      <indication>Reduce to restricted speed and proceed.</indication>
      <reference>Page 84 and 88</reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Normal</route>
      <dccAspect>1</dccAspect>
    </aspect>
    <aspect>
      <name>Home Signal Yellow for Diverging Route</name>
      <rule>Rule 288</rule>
      <indication>Proceed on diverging route at restricted speed.</indication>
      <reference>Page 85</reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Diverging</route>
      <dccAspect>8</dccAspect>
    </aspect>
    <aspect>
      <name>Home Signal Red over Lunar</name>
      <rule>Rule 289</rule>
      <indication>Proceed without stopping at restricted speed on other than main track.</indication>
      <reference>Page 86</reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Diverging</route>
      <dccAspect>3</dccAspect>
    </aspect>
    <aspect>
      <name>Home Signal Red</name>
      <rule>Rule 290</rule>
      <indication>Stop.</indication>
      <reference>Page 87</reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>0</dccAspect>
    </aspect>
    <aspect>
      <name>Stop and Proceed</name>
      <rule>Rule 291, 292 and 293</rule>
      <indication>Stop. Then proceed at restricted speed without calling dispatcher or signal operator. When flashing white displayed be governed by special instructions.</indication>
      <reference>Page 89-90</reference>
      <speed>Stop</speed>
      <speed2>Restricted</speed2>
      <route>Either</route>
      <dccAspect>0</dccAspect>
    </aspect>
    <aspect>
      <name>Unlit</name>
      <rule>-</rule>
      <indication>Mast is unlit</indication>
      <reference>-</reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>31</dccAspect>
    </aspect>
  </aspects>
