  <aspecttable>CROR</aspecttable>
  <name>Single head searchlight dwarf signal</name>
  <reference>As described in the CROR Rule Book TC O-0-93.</reference>
  <description>Appearances for a single head searchlight dwarf</description>
  <appearances>
    <appearance>
      <aspectname>Slow to Clear</aspectname>
      <show>green</show>
      <reference>Rule 431</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CROR-2008/1-Lo/CROR-1D-431.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Slow to Stop</aspectname>
      <show>flashyellow</show>
      <reference>Rule 435</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CROR-2008/1-Lo/CROR-1D-435.gif</imagelink>
    </appearance>
    <appearance>
