      <reference>Rule 438</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CROR-2008/1-Lo/CROR-1D-438.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Stop Signal</aspectname>
