      <reference>Rule 439</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CROR-2008/1-Lo/CROR-1D-439.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Not Lit</aspectname>
      <show>dark</show>
      <imagelink>../../../resources/icons/smallschematics/aspects/CROR-2008/1-Lo/CROR-1D-Dark.gif</imagelink>
    </appearance>
  </appearances>
