  <aspecttable>NYC-1956</aspecttable>
  <name>Double searchlight high permissive signal</name>
  <reference>As described in the New York Central System publication "Rules of the Operating Department, Effective October 28, 1956."</reference>
  <description>Appearances for a two-searchlight signal head without other badging</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>Rule 281</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach Medium</aspectname>
      <show>green</show>
      <show>yellow</show>
      <reference>Rule 281A</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 281A.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Limited</aspectname>
      <show>yellow</show>
      <show>flashgreen</show>
      <reference>Rule 281B</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 281B.gif</imagelink>
    </appearance>
        
    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>yellow</show>
      <show>green</show>
      <reference>Rule 282</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 282.gif</imagelink>
    </appearance>
        
    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>Rule 282A</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 282A.gif</imagelink>
    </appearance>
  
    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference>Rule 285</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 285.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Rule 290</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 290.gif</imagelink>
    </appearance>
     
    <appearance>
      <aspectname>Stop and Proceed</aspectname>
      <show>red</show>
      <show>red</show>
      <reference>Rule 291</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-2-high-per/Rule 291.gif</imagelink>
    </appearance>
    
  </appearances>

