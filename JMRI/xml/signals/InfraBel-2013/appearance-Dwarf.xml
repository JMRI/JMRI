    </appearance>
    <appearance>
      <aspectname>Not Lit</aspectname>
      <show>dark</show>
      <imagelink type="large">../../../resources/icons/largeschematics/aspects/InfraBel-2013/Dwarf-D.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/InfraBel-2013/Dwarf-D.gif</imagelink>
    </appearance>
  </appearances>
