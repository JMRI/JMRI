    </node>
    <node><name>Monitor Slots
     <name xml:lang="it">Monitor Slots</name>
    </name>
        <panel>jmri.jmrix.loconet.slotmon.SlotMonPane</panel>
    </node>
    <node><name>Monitor Clock
     <name xml:lang="it">Monitor Orologio</name>
    </name>
        <panel>jmri.jmrix.loconet.clockmon.ClockMonPane</panel>
    </node>
    <node><name>Interface Status
     <name xml:lang="it">Stato Interfaccia</name>
    </name>
        <panel>jmri.jmrix.loconet.locostats.LocoStatsPanel</panel>
    </node>
  </node>

  <node><name>Tools
   <name xml:lang="it">Strumenti</name>
  </name>
    <node><name>Throttle Messaging
     <name xml:lang="it">Messaggi Palmare</name>
    </name>
        <panel>jmri.jmrix.loconet.throttlemsg.MessagePanel</panel>
    </node>
  </node>

  <node><name>Configuration</name>
    <node><name>Set LocoNet ID
     <name xml:lang="it">Imposta ID Loconet</name>
    </name>
        <panel>jmri.jmrix.loconet.locoid.LocoIdPanel</panel>
    </node>
    <node><name>Configure Command Station
     <name xml:lang="it">Configura Centrale</name>
    </name>
        <panel>jmri.jmrix.loconet.cmdstnconfig.CmdStnConfigPane</panel>
    </node>
    <node><name>Configure BDL16/BDL168
