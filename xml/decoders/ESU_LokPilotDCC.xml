                <output name = "2" label = "Back Lights"/>
                <output name = "3" label = "Aux1"/>
                <output name = "4" label = "Aux2"/>
                <output name = "5" label = "Shunting"/>
                <output name = "6" label = "Acc/Dec off"/>
