				<output name="2" label="F0(r)" connection="wire" maxcurrent="200 mA"/>
				<output name="3" label=". A1 ." connection="wire" maxcurrent="5 mA"/>
				<output name="4" label=". A2 ." connection="wire" maxcurrent="5 mA"/>
