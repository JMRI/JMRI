<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: PpP_Sem3.xml 19243 2012-11-29 23:10:10Z fmco $ -->
<decoder-config>
		<version author="http://www.ppp-digital.es" version="1" lastUpdated="20121212"/>
			
<decoder>
	<family name="PpP Decoders"  mfg="PpP"
	lowVersionID="32" highVersionID="32"
	comment="PpP-Sem3 decoder.">
	<model model="PpP-Sem3" />
	</family>

	<programming direct="yes" paged="yes" register="no" ops="no"></programming>

<variables>
		
	<variable label="Red light bright" CV="3" mask="XXXXVVVV" 	default="15" comment="Red light bright" item="pCV3">
     <decVal min="1" max="15"/>
     </variable>

	<variable label="Green light bright" CV="4" 	mask="XXXXVVVV" 	default="15" comment="Green light bright" 	item="pCV4">
     <decVal min="1" max="15"/>
     </variable>

	<variable label="Yellow light bright" CV="5" 	mask="XXXXVVVV" 	default="15" comment="Yellow light 	bright" item="pCV5">
     <decVal min="1" max="15"/>
     </variable>

	
	<variable label="Decoder Version" CV="7" readOnly="yes"  	default="32">
	<decVal min="0" max = "255" />
	</variable>
					
	<variable label="Manufacturer" CV="8" readOnly="yes" 	default="74">
	<decVal min="0" max = "255" />
	</variable>
		
	<variable label="On/Off time" CV="33" default="20" 	comment="On/Off time" item="pCV33">
     <decVal min="1" max="255"/>
     </variable>

	<variable label="Signal type" CV="34" mask="XXXXVVVV" 	default="0" comment="Signal type" item="pCV34">
     <enumVal>
		<enumChoice choice="4 signals of 3 lights" value="0"/>    
		<enumChoice choice="3 signals of 3 lights and relays"  value="1"/>
	</enumVal>
     </variable>




</variables>	
	
</decoder>


<pane name="PpP">

<column>
      <display item="pCV3"/>
      <display item="pCV4"/>	
      <display item="pCV5"/>
      <display item="pCV33"/>
      <display item="pCV34"/>


</column>
<name>PpP Panel</name>
</pane>




  
</decoder-config>

