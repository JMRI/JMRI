<!-- Pane of Advanced options of Märklin mLD and mSD decoders               -->

<pane xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <name>Advanced</name>
  <name xml:lang="ca">Avançat</name>
  <name xml:lang="cs">Pokročilý</name>
  <name xml:lang="da">Avanceret</name>
  <name xml:lang="de">Erweitert</name>
  <name xml:lang="fr">Avancé</name>
  <name xml:lang="it">Avanzato</name>
  <name xml:lang="nl">Uitgebreid</name>
  <column>
    <separator/>
    <label>
      <text>Enabled Protocols</text>
      <text xml:lang="it">Protocolli Abilitati</text>
      <text xml:lang="de">Protokolle Aktivieren</text>
      <text xml:lang="ca">Protocols Habilitats</text>
    </label>
    <label>
      <text> </text>
    </label>
    <display item="Advanced Protocols Option 1" format="checkbox"/>
    <display item="Advanced Protocols Option 2" format="checkbox"/>
    <display item="Advanced Protocols Option 3" format="checkbox"/>
    <display item="Advanced Protocols Option 4" format="checkbox"/>
    <label>
      <text> </text>
    </label>
    <label>
      <text> </text>
    </label>
    <separator/>
    <label>
      <text>Save Settings</text>
      <text xml:lang="de">Speichereinstellungen</text>
    </label>
    <label>
      <text> </text>
    </label>
    <display item="Advanced Save Setting Option 1" format="checkbox"/>
    <display item="Advanced Save Setting Option 2" format="checkbox"/>
    <display item="Advanced Save Setting Option 3" format="checkbox"/>
    <display item="Advanced Save Setting Option 4" format="checkbox"/>
    <label>
      <text> </text>
    </label>
  </column>
  <column>
    <separator/>
    <label>
      <text>Brake Sections</text>
      <text xml:lang="de">Bremsstrecken</text>
      <text xml:lang="ca">Seccions de Frenada</text>
    </label>
    <label>
      <text> </text>
    </label>
    <display item="Advanced Brake Sections Option 1" format="checkbox"/>
    <display item="Advanced Brake Sections Option 2" format="checkbox"/>
    <label>
      <text> </text>
    </label>
    <label>
      <text> </text>
    </label>
    <separator/>
    <label>
      <text>Speed</text>
      <text xml:lang="de">Geschwindigkeit</text>
    </label>
    <label>
      <text> </text>
    </label>
    <row>
      <display item="Advanced Speed Option 1"/>
      <label>
        <text> </text>
      </label>
      <display item="Advanced Speed Option 1" label="" format="hslider"/>
    </row>
    <label>
      <text> </text>
    </label>
  </column>
</pane>
