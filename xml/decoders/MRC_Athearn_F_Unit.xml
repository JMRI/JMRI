<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <version author="Bob Jacobsen" version="1" lastUpdated="20071221"/>
  <version author="Marc Fournier forfoum@videotron.ca" version="2" lastUpdated="20090624"/>
  <!-- Ver 1  Made from the MRC_1645 file -->
  <!-- Ver 2  Changed family to group Athearn together, cleanup, moved the -->
  <!--        consist light function into the consist TAB -->
  <decoder>
    <family name="Athearn" mfg="MRC" lowVersionID="32" highVersionID="32">
      <model model="Athearn Genesis F Unit" numOuts="2" numFns="19" maxTotalCurrent="1.5A" extFnsNmraF13="yes">
                </model>
    </family>
    <programming direct="yes" paged="yes" register="yes" ops="yes"/>
    <variables>
      <xi:include href="http://jmri.org/xml/decoders/nmra/shortAndLongAddress.xml"/>
      <variable CV="2" item="Vstart" default="0" comment="Range 0-32">
        <decVal max="32"/>
        <label>Start voltage</label>
        <comment>Range 0-32</comment>
      </variable>
      <variable CV="3" item="Accel" default="0" comment="Range 0-32">
        <decVal max="32"/>
        <label>Acceleration</label>
        <comment>Range 0-32</comment>
      </variable>
      <variable CV="4" item="Decel" default="0" comment="Range 0-32">
        <decVal max="32"/>
        <label>Deceleration</label>
        <comment>Range 0-32</comment>
      </variable>
      <variable CV="5" item="Vhigh" default="32" comment="Range 0-32">
        <decVal max="32"/>
        <label>Top voltage</label>
        <comment>Range 0-32</comment>
      </variable>
      <variable CV="6" item="Vmid" default="1" comment="Range 0-1">
        <decVal max="1"/>
        <label>Middle Voltage</label>
        <comment>Range 0-1</comment>
      </variable>
      <variable CV="7" readOnly="yes" item="Decoder Version" default="32">
        <decVal/>
        <label>Manufacturer version number</label>
      </variable>
      <variable CV="8" readOnly="yes" item="Manufacturer" default="143">
        <decVal/>
        <label>Manufacturer ID</label>
      </variable>
      <variable CV="19" mask="XVVVVVVV" item="Consist Address">
        <decVal/>
        <label>Advanced consist address</label>
      </variable>
      <variable CV="21" mask="XXXXXXXV" default="0" item="Consist Function" tooltip="Advanced consist accessory function assignment works only when CV19 = non zero">
        <enumVal>
          <enumChoice choice="Locomotive Base Address">
            <choice>Locomotive Base Address</choice>
          </enumChoice>
          <enumChoice choice="Locomotive Consist Address">
            <choice>Locomotive Consist Address</choice>
          </enumChoice>
        </enumVal>
        <label>Consist Light Functions follows </label>
      </variable>
      <variable CV="29" mask="XXXXXXXV" item="Locomotive Direction">
        <enumVal>
          <enumChoice choice="Forward">
            <choice>Forward</choice>
          </enumChoice>
          <enumChoice choice="Reverse">
            <choice>Reverse</choice>
          </enumChoice>
        </enumVal>
        <label>Normal direction of motion</label>
      </variable>
      <variable CV="29" mask="XXXXXXVX" item="Speed Step Mode" default="1">
        <enumVal>
          <enumChoice choice="14">
            <choice>14</choice>
          </enumChoice>
          <enumChoice choice="28/128 (recommended)">
            <choice>28/128 (recommended)</choice>
          </enumChoice>
        </enumVal>
        <label>Speed Steps</label>
      </variable>
      <variable CV="29" mask="XXXXXVXX" default="0" item="Analog (DC) Operation">
        <enumVal>
          <enumChoice choice="Off">
            <choice>Off</choice>
          </enumChoice>
          <enumChoice choice="On">
            <choice>On</choice>
          </enumChoice>
        </enumVal>
        <label>Analog conversion mode</label>
      </variable>
      <variable CV="50" item="Sound Option 2" default="4" comment="Range 0-11 (11 is off)">
        <decVal max="16"/>
        <label>Horn type</label>
        <comment>Range 0-11 (11 is off)</comment>
      </variable>
      <variable CV="51" item="Sound Setting 1" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Horn volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="52" item="Sound Option 3" default="3" comment="Range 0-7 (7 is off)">
        <decVal max="7"/>
        <label>Bell type</label>
        <comment>Range 0-7 (7 is off)</comment>
      </variable>
      <variable CV="53" item="Sound Setting 2" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Bell volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="54" item="Sound Setting 3" default="3" comment="Range 0-50">
        <decVal max="50"/>
        <label>Bell ring rate</label>
        <comment>Range 0-50</comment>
      </variable>
      <variable CV="55" item="Sound Setting 4" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Diesel volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="56" item="Sound Setting 5" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Brake squeal volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable item="Sound Setting 6" CV="57" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Dynamic brake volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable item="Sound Setting 7" CV="58" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Air release volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="59" item="Sound Setting 8" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Air pump volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="60" item="Sound Setting 11" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Safety pop valve volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="61" item="Sound Setting 12" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Engine cooling fan volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="62" item="Sound Setting 13" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Coupling volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="63" item="Sound Setting 14" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Random noise volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="64" item="Sound Setting 15" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Rail wheel clack</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="105" item="User Id #1" default="0" comment="Range 0-255">
        <decVal max="255"/>
        <label>User ID #1</label>
        <comment>Range 0-255</comment>
      </variable>
      <variable CV="106" item="User Id #2" default="0" comment="Range 0-255">
        <decVal max="255"/>
        <label>User ID #2</label>
        <comment>Range 0-255</comment>
      </variable>
      <variable CV="112" item="Sound Setting 16" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Exhaust volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="113" item="Sound Setting 17" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Coupling fire volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable CV="114" item="Sound Setting 18" default="3" comment="Range 0-3">
        <decVal max="3"/>
        <label>Brake release volume</label>
        <comment>Range 0-3</comment>
      </variable>
      <variable item="Sound Option 5" CV="115" default="1">
        <enumVal>
          <enumChoice choice="Off">
            <choice>Off</choice>
          </enumChoice>
          <enumChoice choice="On">
            <choice>On</choice>
          </enumChoice>
        </enumVal>
        <label>Auto Brake squeal</label>
      </variable>
      <variable item="Sound Option 6" CV="116" default="1">
        <enumVal>
          <enumChoice choice="Type 0">
            <choice>Type 0</choice>
          </enumChoice>
          <enumChoice choice="Type 1">
            <choice>Type 1</choice>
          </enumChoice>
          <enumChoice choice="Off (2)">
            <choice>Off (2)</choice>
          </enumChoice>
        </enumVal>
        <label>Coupling Sound Type</label>
      </variable>
      <variable item="Lights Enable" CV="117" default="1">
        <enumVal>
          <enumChoice choice="Off">
            <choice>Off</choice>
          </enumChoice>
          <enumChoice choice="On">
            <choice>On</choice>
          </enumChoice>
        </enumVal>
        <label>Lights Enable/Disable</label>
      </variable>
    </variables>
    <resets>
      <factReset label="Reset All CVs" CV="125" default="1"/>
    </resets>
  </decoder>
  <pane>
    <column>
      <label>
        <text>MRC Note </text>
      </label>
      <label>
        <text> </text>
      </label>
      <label>
        <text>This decoder supports all program methods including register mode, paged mode, </text>
      </label>
      <label>
        <text>CV programming, direct mode and programming on the main (OPS mode programming).</text>
      </label>
      <label>
        <text>Program the locomotive the same way you would program any other NMRA compatible </text>
      </label>
      <label>
        <text>decoder with your DCC system. </text>
      </label>
      <label>
        <text> </text>
      </label>
      <separator/>
      <label>
        <text>Note: Due to the nature of dual function decoders, it does not support the CV read </text>
      </label>
      <label>
        <text>back feature. The Dual-Function decoder is manufactured by Model Rectifier Corporation </text>
      </label>
      <label>
        <text>for Athearn Trains. </text>
      </label>
      <label>
        <text> </text>
      </label>
      <separator/>
      <label>
        <text> </text>
      </label>
      <label>
        <text> LIGHT FUNCTION </text>
      </label>
      <display item="Lights Enable" tooltip="Turn lights on/off"/>
    </column>
    <name>MRC</name>
  </pane>
</decoder-config>
