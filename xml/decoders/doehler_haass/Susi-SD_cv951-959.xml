<!-- Using JMRI items "Sound options"  1 to 7, 11, 12 (see "Sound_cv950.xml", "Sound_cv960-962.xml", "Sound_cv964-965.xml" for other items)-->  
  <variable label="Acceleration time" CV="951" tooltip="CV951 (0-255 in seconds)" default="3" item="Sound Option 1">
	<decVal min="0" max="255"/>
	<label xml:lang="fr">Temps d'accélération</label>
	<label xml:lang="de">Beschleunigungszeit</label>
   </variable>
   <variable label="Braking time" CV="952" tooltip="CV952 (0-255 in seconds)" default="3" item="Sound Option 2">
	<decVal min="0" max="255"/>
	<label xml:lang="fr">Temps de freinage</label>
	<label xml:lang="de">Bremszeit</label>
   </variable>
   <variable label="Smoke puffs at speed 1" CV="953" tooltip="CV953 (0-255)" default="120" item="Sound Option 3">
	<decVal min="0" max="255"/>
	<label xml:lang="fr">Poussée de fumée en vitesse 1</label>
	<label xml:lang="de">Dampfstöße bei Fahrstufe 1</label>
   </variable>
  <variable label="Smoke puffs at higher speed step" CV="954" tooltip="CV954 (0-255)" default="20" item="Sound Option 4">
	<decVal min="0" max="255"/>
	<label xml:lang="fr">Poussée de fumée en vitesse supérieure</label>
	<label xml:lang="de">Dampfstöße bei höherer Fahrstufe</label>
   </variable>
   <variable label="Breaking noise at minimal speed step" CV="955" tooltip="CV955 (0-127)" default="20" item="Sound Option 11">
    <decVal min="0" max="127"/>
    <label xml:lang="fr">Bruit freinage vitesse minimale</label>
    <label xml:lang="de">Bremsenquietschen minimale Fahrstufe</label>
  </variable>
  <variable label="Breaking noise at start up speed step" CV="956" tooltip="CV956 (0-127)" default="13" item="Sound Option 12">
    <decVal min="0" max="127"/>
    <label xml:lang="fr">Bruit freinage vitesse initiale</label>
    <label xml:lang="de">Bremsenquietschen Anfangsfahrstufe</label>
  </variable>
  <variable label="Modulation at speed step 1" CV="957" tooltip="CV957" readOnly="yes" item="Sound Option 5" exclude="SH10A_1.00,SH10A_1.01,SH10A_1.02">
    <decVal/>
    <label xml:lang="fr">Modulation cran de vitesse 1</label>
    <label xml:lang="de">Modulation bei Fahrstufe 1</label>
  </variable>
  <variable label="Modulation at speed step 127" CV="958" tooltip="CV958 (0-255)" default="11" item="Sound Option 6">
     <decVal min="0" max="255"/>
    <label xml:lang="fr">Modulation cran de vitesse 127</label>
    <label xml:lang="de">Modulation bei Fahrstufe 127</label>
  </variable>
  <variable label="Fade-out time in seconds" CV="959" tooltip="CV959 (0-255 in seconds)" default="8" item="Sound Option 7">
     <decVal min="0" max="255"/>
    <label xml:lang="fr">Délai pour mode silencieux</label>
    <label xml:lang="de">Timer für Ausblendeffekt</label>
  </variable>
</variables>