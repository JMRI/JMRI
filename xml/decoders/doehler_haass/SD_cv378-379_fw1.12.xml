  <variable label="Function assignment automatic idle" CV="378" default="0" comment="Range 0-29" item="Sound Group 1 Option 14">
    <decVal max="29"/>
    <label>Function assignment automatic idle</label>
    <label xml:lang="de">Funktionszuordnung  automatischer Leerlauf</label>
    <label xml:lang="nl">Functietoewijzing automatisch in leerloop</label>
    <tooltip>&lt;html&gt;When the corresponding function key is pressed,&lt;br&gt;
                        the automatic idling after the time period from&lt;br&gt;
                        CV350 has elapsed. If no function key is assigned,&lt;br&gt;
                        the automatic idle is always effective.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
    <tooltip xml:lang="de">&lt;html&gt;Wenn die entsprechende Funktionstaste gedrückt ist,&lt;br&gt;
                                      wirkt der automatische Leerlauf nach Verstreichen&lt;br&gt;
                                      der Zeitdauer aus CV350. Ist keine Funktionstaste&lt;br&gt;
                                      zugeordnet wirkt der automatische Leerlauf immer.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
    <tooltip xml:lang="nl">&lt;html&gt;Wanneer de bijbehorende functietoets is ingedrukt,&lt;br&gt;
                                      werkt de automatische overgegaan naar stationair,&lt;br&gt;
                                      wanneer de tijdsduur van CV350 is verstreken.&lt;br&gt;
                                      Als er geen functietoets toegewezen wordt,&lt;br&gt;
                                      werkt stationair altijd.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
  </variable>
  <variable CV="379" default="0" comment="Range 0-29" item="Sound Group 1 Option 15">
    <decVal max="29"/>
    <label>Function assignment Forced acceleration</label>
    <label xml:lang="de">Funktionszuordnung Zwangsbeschleunigung</label>
    <label xml:lang="nl">Functietoewijzing Gedwongen versnelling</label>
    <tooltip>&lt;html&gt;When the corresponding function key is pressed,&lt;br&gt;
                        the driving noise even during a deceleration in&lt;br&gt;
                        acceleration.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
    <tooltip xml:lang="de">&lt;html&gt;Wenn die entsprechende Funktionstaste gedrückt ist,&lt;br&gt;
                                      verbleibt das Fahrgeräusch auch während einer&lt;br&gt;
                                      Verzögerung in der Beschleunigung.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
    <tooltip xml:lang="nl">&lt;html&gt;Wanneer de bijbehorende functietoets wordt ingedrukt,&lt;br&gt;(0-29)
                                      blijft het rijgeluid zelfs tijdens een vertraging in&lt;br&gt;
                                      de acceleratie.&lt;br&gt;(0-29)&lt;/html&gt;</tooltip>
  </variable>
