  <name>Uhlenbrock</name>
  <column>
    <separator/>
    <label>
      <text>Uhlenbrock configuration</text>
      <text xml:lang="de">Uhlenbrock Konfiguration</text>
      <text xml:lang="nl">Uhlenbrock Configuratie</text>
    </label>
    <label>
      <text> </text>
    </label>
      <display item="Sound module" format="checkbox"/>
      <display item="LISSY module" format="checkbox"/>
      <display item="SUSI Configuration"/>
    <label>
      <text> </text>
    </label>
      <display item="RailCom" format="checkbox"/>	  
      <display item="RailCom broadcast"/>
      <display item="RailCom data transmission"/>	  
    <label>
      <text> </text>
    </label>
      <display item="LISSY Train Category"/>
    <label>
      <text> </text>
    </label>
      <display item="Digital format"/>
      <display item="Selectrix Operation" format="checkbox"/>
      <display item="Mfx Operation" format="checkbox"/>
      <display item="Motorola address 2"/>	  
    <label>
      <text> </text>
    </label>
    <separator/>
    <label>
      <text>Braking</text>
      <text xml:lang="de">Bremsen</text>
      <text xml:lang="nl">Remmen</text>
    </label>
    <label>
      <text> </text>
    </label>
    <display item="Braking condition"/>
    <display item="Braking End"/>
    <display item="End braking speed"/>
    <display item="Marklin Brake Mode"/>
    <display item="ABC stop with asymmetrical DCC"/>
      <!-- CVs 97-98 -->
    <display item="ABC Braking Value" format="hslider"/> <!--IntelliDrive2-->
    <display item="ABC Slow Speed" format="hslider"/>    <!--IntelliDrive2-->
      <group exclude="76560">
        <label>
            <text> </text>
        </label>
        <label>
            <text>Constant Distance</text>
            <text xml:lang="de">Konstanter Bremsweg</text>
            <text xml:lang="nl">Vaste Remweg</text>
        </label>
      </group>
          <display item="Constant Brakedist Threshold"/>
