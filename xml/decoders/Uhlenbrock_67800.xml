      <variable item="Operation" CV="119" mask="VXXXXXXX" default="0">
        <enumVal>
          <enumChoice choice="DCC" value="0"/>
          <enumChoice choice="Motorola" value="1"/>
        </enumVal>
        <label>Operation:</label>
      </variable>
