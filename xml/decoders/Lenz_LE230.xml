<?xml version="1.0"?>
<!DOCTYPE decoder:decoder-config SYSTEM "DTD/decoder-config.dtd">
<decoder:decoder-config xmlns:decoder="http://jmri.sourceforge.net/xml/decoder">
<decoder:decoder>
	<decoder:id model="LE230" mfg="Lenz" mfgID="99" versionID="51"  defnVersion="0"/>

	<decoder:programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></decoder:programming>

	<decoder:variables>
		<decoder:variable name="Address" CV="1" mask="VVVVVVVV" comment="Short address">
			<decoder:decVal min="1" max="127"></decoder:decVal>
			</decoder:variable>
		<decoder:variable name="Start voltage" CV="2">
				<decoder:decVal max="15"/>
			</decoder:variable>
		<decoder:variable name="Acceleration momentum" CV="3">
				<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="Brake momentum" CV="4">
				<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="Maximum speed" CV="5">
				<decoder:decVal max="10"/>
			</decoder:variable>
		<decoder:variable name="Version Number" CV="7" readOnly="yes">
				<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Manufacturers ID" CV="8" readOnly="yes">
				<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="EMF frequency" CV="5">
				<decoder:decVal max="15"/>
			</decoder:variable>
		<decoder:variable name="Extended address" CV="17">
			<decoder:longAddressVal/>
			</decoder:variable>
		<decoder:variable name="Consist address" CV="19">
			<decoder:decVal/>
			</decoder:variable>
			
		<decoder:variable name="Locomotive direction" CV="29" mask="XXXXXXXV">
			<decoder:enumVal>
				<decoder:enumChoice choice="normal"/>
				<decoder:enumChoice choice="inverted"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Speed step mode" CV="29" mask="XXXXXXVX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Operation with 14 or 27 speed steps"/>
				<decoder:enumChoice choice="Operation with 28 speed steps"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Usage on conventional DC layouts" CV="29" mask="XXXXXVXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="digital mode only"/>
				<decoder:enumChoice choice="can operate on DC or DCC"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Speed curve selection" CV="29" mask="XXXVXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="factory preset curve is used"/>
				<decoder:enumChoice choice="user defined curve is used"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Extended addressing" CV="29" mask="XXVXXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="normal addressing"/>
				<decoder:enumChoice choice="Two Byte extended addressing"/>
				</decoder:enumVal>
			</decoder:variable>

		<decoder:variable name="Motor short" CV="30" mask="XXXXXXXV" readOnly="yes">
			<decoder:enumVal>
				<decoder:enumChoice choice="No"/>
				<decoder:enumChoice choice="Yes"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Front headlight short" CV="30" mask="XXXXXXVX" readOnly="yes">
			<decoder:enumVal>
				<decoder:enumChoice choice="No"/>
				<decoder:enumChoice choice="Yes"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Rear headlight short" CV="30" mask="XXXXXVXX" readOnly="yes">
			<decoder:enumVal>
				<decoder:enumChoice choice="No"/>
				<decoder:enumChoice choice="Yes"/>
				</decoder:enumVal>
			</decoder:variable>
			
		<decoder:variable name="Back EMF control" CV="60" mask="XXXXXXXV">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Decoder control active" CV="60" mask="XXXXXXVX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Brake momentum on DC operation" CV="60" mask="XXXXXVXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>

		<decoder:variable name="Speed Table" CV="67">
			<decoder:speedTableVal entries="14"/>
			</decoder:variable>
	</decoder:variables>
	
</decoder:decoder>
</decoder:decoder-config>
