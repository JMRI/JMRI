<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <version author="brorson@theworld.com" version="1" lastUpdated="20120927"/>
  <decoder>

    <family name="Tortoise driver" mfg="Electroniscript, inc" comment="DCC speaking driver for Tortoise">
      <model model="SDD-001" lowVersionID="1"/>
    </family>

    <programming direct="yes" paged="no" register="no" ops="yes"/>

    <variables>
      <variable label="Decoder Address lo" CV="1" default="03">
        <label>Decoder address low byte</label>
      </variable>

      <variable label="Pushbutton lockout" CV="2" default="01">
        <label>Pushbutton lockout</label>
      </variable>

      <variable label="Revision" CV="7" readOnly="yes">
        <label>Revision</label>
      </variable>

      <variable label="Manufacturer ID" CV="8" readOnly="yes" default="94">
        <label>Manufacturer ID</label>
      </variable>

      <variable label="Decoder Address hi" CV="9" default="0">
        <label>Decoder address high byte</label>
      </variable>

      <variable label="Configuration" CV="29" readOnly="yes" default="192">
        <label>Configuration</label>
      </variable>

    </variables>

  </decoder>
</decoder-config>
