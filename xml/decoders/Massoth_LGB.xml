	</pane>

	<pane name="Miscellaneous">
		<column>
			<display item="hand-over function"/>
			<display item="Half-speed mode"/>
			<display item="Reset Register"/>
		</column>
	</pane>

	<pane name="CVs">
		<column>
			<cvtable/>
		</column>
	</pane>

</decoder-config>
