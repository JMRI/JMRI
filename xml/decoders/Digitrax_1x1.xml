<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: Digitrax_1x1.xml,v 1.10 2002-01-02 20:37:18 jacobsen Exp $ -->
<decoder-config>
		<version author="Bob Jacobsen" version="1" lastUpdated="20011207"/>

<!-- Represent the 1*1 family of Digitrax decoders, e.g. DH121, e.g. xx121. -->
<!-- These have STD (not STD*) outputs. -->

<decoder>
	<id family="Digitrax 1x1" mfg="Digitrax" mfgID="129" defnVersion="0"
				lowVersionID="33" highVersionID="45"
				comment="CVs for Digitrax 1x1, e.g. DH121"></id>

	<programming direct="byteOnly" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable name="Short Address" CV="1" default="03">
			<decVal min="1" max="127"/></variable>
		<variable name="Vstart" CV="2"
						comment="A value of 255 corresponds to 100%">
			<decVal/></variable>
		<variable name="Acceleration Rate" CV="3"
						stdName="Accel" >
			<decVal max="31"/></variable>
		<variable name="Deceleration Rate" CV="4"
						stdName="Decel">
			<decVal max="31"/></variable>
		<variable name="Vhigh" CV="5">					<decVal/></variable>
		<variable name="Vmid" CV="6">					<decVal/></variable>
		<variable name="Manufacturer Version No" CV="7" readOnly="yes"
						stdName="Decoder Version"><decVal/></variable>
		<variable name="Manufacturer ID" CV="8" readOnly="yes"
						stdName="Manufacturer">			<decVal/></variable>

		<variable name="Analog Mode Function Status - F1" CV="13" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - F2" CV="13" mask="XXXXXXVX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - F3" CV="13" mask="XXXXXVXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - F4" CV="13" mask="XXXXVXXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - F5" CV="13" mask="XXXVXXXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - F6" CV="13" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - FL(f)" CV="13" mask="XVXXXXXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>
		<variable name="Analog Mode Function Status - FL(r)" CV="13" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal></variable>

		<variable name="Long Address" CV="17">
			<longAddressVal/>
			</variable>

		<variable name="Consist Address" CV="19">			<decVal/></variable>

		<variable name="Normal direction of motion" CV="29" mask="XXXXXXXV" 
					stdName="Locomotive Direction">
			<enumVal>
				<enumChoice choice="forward"/>
				<enumChoice choice="reverse"/>
				</enumVal>
			</variable>
		<variable name="Speed steps" CV="29" mask="XXXXXXVX" 
				stdName="Speed Step Mode" default="1">
			<enumVal>
				<enumChoice choice="14 speed step format"/>
				<enumChoice choice="28 speed step format"/>
				</enumVal>
			</variable>
		<variable name="Analog (DC) Operation" CV="29" mask="XXXXXVXX" default="1">
			<enumVal>
				<enumChoice choice="NMRA Digital only"/>
				<enumChoice choice="DC conversion enabled"/>
				</enumVal></variable>
		<variable name="Speed Table Definition" CV="29" mask="XXXVXXXX">
			<enumVal>
				<enumChoice choice="Use Vstart, Vmid, Vhigh"/>
				<enumChoice choice="Use table in CVs 66 through 95"/>
				</enumVal></variable>
		<variable name="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>

		<variable name="Kick Start" CV="65">
			<decVal/>
			</variable>
		<variable name="Forward Trim" CV="66">
			<decVal/>
			</variable>
		<variable name="Reverse Trim" CV="95">
			<decVal/>
			</variable>
		<variable name="User Private ID #1" CV="105"
					stdName="User Id #1">
			<decVal/>
			</variable>
		<variable name="User Private ID #2" CV="106"
					stdName="User Id #2">
			<decVal/>
			</variable>
		<variable name="Speed Table" CV="67">
			<speedTableVal/>
			</variable>

		<variable name="Directional Headlights" CV="61" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="Normal headlight operation"/>
				<enumChoice choice="Reverse light lead controlled by F4"/>
				</enumVal></variable>

	<!-- Define the fixed Function-Output mapping -->
	<constant name="FL(f) controls output 1" minOut="1" default="1" /> 
	<constant name="FL(r) controls output 2" minOut="2" default="1" /> 
	<constant name="F1 controls output 3" minOut="3" minFn="1" default="1" /> 
	<constant name="F2 controls output 4" minOut="4" minFn="2" default="1" /> 
	<constant name="F3 controls output 5" minOut="5" minFn="3" default="1" /> 
	<constant name="F4 controls output 6" minOut="6" minFn="4" default="1" /> 
	<constant name="F5 controls output 7" minOut="7" minFn="5" default="1" /> 
	<constant name="F6 controls output 8" minOut="8" minFn="6" default="1" /> 
	<constant name="F7 controls output 9" minOut="9" minFn="7" default="1" /> 
	<constant name="F8 controls output 10" minOut="10" minFn="8" default="1" /> 

	</variables>
	
</decoder>
</decoder-config>
