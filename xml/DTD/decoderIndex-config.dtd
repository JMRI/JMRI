<!-- Defines XML documenting the list of available decoder definitions -->

<!ELEMENT decoderIndex:decoderIndex-config (decoderIndex:decoderIndex)>
<!ATTLIST decoderIndex:decoderIndex-config xmlns:decoderIndex CDATA "">

<!ELEMENT decoderIndex:decoderIndex (decoderIndex:mfgList, decoderIndex:familyList)>

<!-- Match NMRA codes to manufacturer names & vice versa -->
<!ELEMENT decoderIndex:mfgList (decoderIndex:manufacturer*) >

<!ELEMENT decoderIndex:manufacturer EMPTY >
<!ATTLIST decoderIndex:manufacturer mfg       CDATA #REQUIRED>  <!-- mfg name used for identification   -->
<!ATTLIST decoderIndex:manufacturer mfgID     CDATA #IMPLIED>  <!-- CV08 value, missing means any           -->
<!ATTLIST decoderIndex:manufacturer comment   CDATA #IMPLIED>

<!-- familyList is actually a list of families and hence decoder definitions -->
<!ELEMENT decoderIndex:familyList (decoderIndex:family*) >

<!ELEMENT decoderIndex:family (decoderIndex:decoder*) >
<!ATTLIST decoderIndex:family file      CDATA #REQUIRED>  <!-- file name for details -->
<!ATTLIST decoderIndex:family name      CDATA #REQUIRED>  <!-- family name used for identification -->
<!ATTLIST decoderIndex:family mfg       CDATA #REQUIRED>  <!-- mfg name used for identification   -->
<!ATTLIST decoderIndex:family versionID CDATA #IMPLIED >  <!-- CV07 value, default default blank means any   -->
<!ATTLIST decoderIndex:family comment   CDATA #IMPLIED>

<!ELEMENT decoderIndex:decoder EMPTY >
<!ATTLIST decoderIndex:decoder model     CDATA #REQUIRED>  <!-- model name used for identification -->
<!ATTLIST decoderIndex:decoder versionID CDATA #IMPLIED >  <!-- CV07 value, default default blank means any   -->
<!ATTLIST decoderIndex:decoder numFns    CDATA #IMPLIED>   <!-- number of functions, default is all -->
<!ATTLIST decoderIndex:decoder options   CDATA #IMPLIED>   <!-- comma-sep list of included options, but default is all on -->
<!ATTLIST decoderIndex:decoder comment   CDATA #IMPLIED>

