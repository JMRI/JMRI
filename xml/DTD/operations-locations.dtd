<!ELEMENT operations-config (locations)*>

<!ELEMENT locations (location)*>
<!ELEMENT location (secondary)*>
<!ELEMENT secondary EMPTY>

<!ATTLIST location id				CDATA #REQUIRED>          
<!ATTLIST location name				CDATA #IMPLIED>
<!ATTLIST location ops				CDATA #IMPLIED>       
<!ATTLIST location dir				CDATA #IMPLIED> 
<!ATTLIST location carTypes			CDATA #IMPLIED> 
<!ATTLIST location switchList		(true | false) "false">
<!ATTLIST location comment			CDATA #IMPLIED>

<!ATTLIST secondary id				CDATA #REQUIRED>          
<!ATTLIST secondary name			CDATA #IMPLIED>
<!ATTLIST secondary locType			CDATA #IMPLIED>       
<!ATTLIST secondary dir				CDATA #IMPLIED> 
<!ATTLIST secondary carTypes		CDATA #IMPLIED> 
<!ATTLIST secondary carRoadOperation		CDATA #IMPLIED> 
<!ATTLIST secondary carRoads		CDATA #IMPLIED> 
<!ATTLIST secondary length			CDATA #IMPLIED> 
<!ATTLIST secondary moves			CDATA #IMPLIED> 
<!ATTLIST secondary comment			CDATA #IMPLIED>

