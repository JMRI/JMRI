<!ELEMENT traininfofile (traininfo)>

<!ELEMENT traininfo EMPTY >
    <!ATTLIST traininfo version                 CDATA "1">
    <!ATTLIST traininfo transitname             CDATA #REQUIRED>
    <!ATTLIST traininfo transitid               CDATA "-1">
    <!ATTLIST traininfo trainname        	CDATA #REQUIRED>
    <!ATTLIST traininfo dccaddress	        CDATA #REQUIRED>
    <!ATTLIST traininfo trainintransit	        CDATA #REQUIRED>
    <!ATTLIST traininfo startblockname          CDATA #REQUIRED>
    <!ATTLIST traininfo startblockid            CDATA "-1">
    <!ATTLIST traininfo startblockseq           CDATA "-1">
    <!ATTLIST traininfo endblockname            CDATA #REQUIRED>
    <!ATTLIST traininfo endblockid              CDATA "-1">
    <!ATTLIST traininfo endblockseq             CDATA "-1">
    <!ATTLIST traininfo trainfromroster         CDATA #REQUIRED>
    <!ATTLIST traininfo trainfromtrains	   	CDATA #REQUIRED>
    <!ATTLIST traininfo trainfromuser	   	CDATA #REQUIRED>
    <!ATTLIST traininfo priority        	CDATA #REQUIRED>
    <!ATTLIST traininfo resetwhendone        	CDATA #REQUIRED>
    <!ATTLIST traininfo reverseatend        	CDATA #REQUIRED>
    <!ATTLIST traininfo delayedstart        	CDATA "no">
    <!ATTLIST traininfo delayedrestart        	CDATA "no">
    <!ATTLIST traininfo delayedrestartsensor    CDATA "-1">
    <!ATTLIST traininfo delayedrestarttime      CDATA "00:00">
    <!ATTLIST traininfo delayedSensor           CDATA "">
    <!ATTLIST traininfo departuretimehr        	CDATA #REQUIRED>
    <!ATTLIST traininfo departuretimemin        CDATA #REQUIRED>
    <!ATTLIST traininfo traintype        	CDATA #REQUIRED>
