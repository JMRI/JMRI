    <!ATTLIST traininfo runinreverse	        CDATA "no">
    <!ATTLIST traininfo sounddecoder	        CDATA #REQUIRED>
    <!ATTLIST traininfo maxtrainlength        	CDATA #REQUIRED>
    <!ATTLIST traininfo terminatewhendone     	CDATA "yes">
    <!ATTLIST traininfo loadatstartup        	CDATA "no">
    <!ATTLIST traininfo allocationmethod      	CDATA "3">
    <!ATTLIST traininfo allocatealltheway     	CDATA "no">
    <!ATTLIST traininfo usespeedprofile        	CDATA "no">
    <!ATTLIST traininfo stopbyspeedprofile      CDATA "no">
    <!ATTLIST traininfo stopbyspeedprofileadjust CDATA "1500">

