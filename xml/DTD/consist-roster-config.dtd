<!ELEMENT consist-roster-config (roster*)>

<!ELEMENT roster (consist*)>

<!ELEMENT consist (eng1*)>
<!ELEMENT consist (eng2*)>
<!ELEMENT consist (eng3*)>
<!ELEMENT consist (eng4*)>
<!ELEMENT consist (eng5*)>
<!ELEMENT consist (eng6*)>


<!-- Key used in lists, etc - User identification for this loco -->
<!ATTLIST consist id	CDATA #REQUIRED>          

<!-- The identification attributes must be kept the same as the ones in the consist DTD -->
<!-- The copy in the consist file is used if we have to import an existing file into a roster -->

<!-- Manual identification -->
<!ATTLIST consist id			CDATA #REQUIRED>          
<!ATTLIST consist consistNumber	CDATA #IMPLIED>          
<!ATTLIST consist roadNumber	CDATA #IMPLIED> 
<!ATTLIST consist roadName		CDATA #IMPLIED>                   
<!ATTLIST consist model			CDATA #IMPLIED>                   
<!ATTLIST consist comment		CDATA #IMPLIED>

<!ATTLIST eng1 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng1 longAddress		( yes | no) "yes">          
<!ATTLIST eng1 locoDir			CDATA #IMPLIED>      

<!ATTLIST eng2 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng2 longAddress		( yes | no) "yes">          
<!ATTLIST eng2 locoDir			CDATA #IMPLIED>       

<!ATTLIST eng3 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng3 longAddress		( yes | no) "yes">          
<!ATTLIST eng3 locoDir			CDATA #IMPLIED>       

<!ATTLIST eng4 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng4 longAddress		( yes | no) "yes">          
<!ATTLIST eng4 locoDir			CDATA #IMPLIED>       

<!ATTLIST eng5 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng5 longAddress		( yes | no) "yes">          
<!ATTLIST eng5 locoDir			CDATA #IMPLIED>       

<!ATTLIST eng6 dccLocoAddress	CDATA #IMPLIED>          
<!ATTLIST eng6 longAddress		( yes | no) "yes">          
<!ATTLIST eng6 locoDir			CDATA #IMPLIED>          


