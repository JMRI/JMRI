<!-- Need annotations                                                 -->
<!-- Attributes need to get types right esp. for enumerated           -->
<!-- Attributes need REQUIRED/IMPLIED                                 -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi ="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:docbook="http://docbook.org/ns/docbook"
           xmlns:jmri="http://jmri.org/xml/schema/JMRIschema"
           xsi:schemaLocation="
                http://jmri.org/xml/schema/JMRIschema http://jmri.org/xml/schema/JMRIschema.xsd
                http://docbook.org/ns/docbook http://jmri.org/xml/schema/docbook/DocBook.xsd
            "
        >

    <xs:complexType name="AudioManagerType">
      <xs:annotation>
        <xs:documentation>
          Define the XML stucture for storing the contents of a AudioManager implementation.
        </xs:documentation>
        <xs:appinfo>
            <jmri:usingclass configurexml="true">jmri.jmrit.audio.configurexml.DefaultAudioManagerXml</jmri:usingclass>
        </xs:appinfo>
      </xs:annotation>

      <xs:sequence>
        
        <xs:element name="audiobuffer" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="url" minOccurs="0" maxOccurs="1" />
            </xs:sequence>
            <xs:attribute name="systemName" type="systemNameType" />
            <xs:attribute name="userName" type="userNameType" />
          </xs:complexType>
        </xs:element>
            
        <xs:element name="audiolistener" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="position" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="x" type="xs:float" />
                  <xs:attribute name="y" type="xs:float" />
                  <xs:attribute name="z" type="xs:float" />
                </xs:complexType>
               </xs:element>
               <xs:element name="velocity" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="x" type="xs:float" />
                  <xs:attribute name="y" type="xs:float" />
                  <xs:attribute name="z" type="xs:float" />
                </xs:complexType>
              </xs:element>
              <xs:element name="orientation" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="atX" type="xs:float" />
                  <xs:attribute name="atY" type="xs:float" />
                  <xs:attribute name="atZ" type="xs:float" />
                  <xs:attribute name="upX" type="xs:float" />
                  <xs:attribute name="upY" type="xs:float" />
                  <xs:attribute name="upZ" type="xs:float" />
                </xs:complexType>
              </xs:element>
              <xs:element name="gain" type="xs:float" minOccurs="1" maxOccurs="1" />
              <xs:element name="metersperunit" type="xs:float" minOccurs="1" maxOccurs="1" />
            </xs:sequence>
            <xs:attribute name="systemName" type="systemNameType" />
            <xs:attribute name="userName" type="userNameType" />
          </xs:complexType>
        </xs:element>
            
        <xs:element name="audiosource" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="position" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="x" type="xs:float" />
                  <xs:attribute name="y" type="xs:float" />
                  <xs:attribute name="z" type="xs:float" />
                </xs:complexType>
              </xs:element>
              <xs:element name="velocity" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="x" type="xs:float" />
                  <xs:attribute name="y" type="xs:float" />
                  <xs:attribute name="z" type="xs:float" />
                </xs:complexType>
              </xs:element>
              <xs:element name="assignedbuffer" type="xs:string" minOccurs="1" maxOccurs="1" />
              <xs:element name="gain" type="xs:float" minOccurs="1" maxOccurs="1" />
              <xs:element name="pitch" type="xs:float" minOccurs="1" maxOccurs="1" />
              <xs:element name="distances" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="ref" type="xs:float" />
                </xs:complexType>
              </xs:element>
              <xs:element name="loops" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="min" type="xs:integer" />
                  <xs:attribute name="max" type="xs:integer" />
                </xs:complexType>
              </xs:element>
              <xs:element name="fadetimes" minOccurs="0" maxOccurs="1" >
                <xs:complexType>
                  <xs:attribute name="in" type="xs:integer" />
                  <xs:attribute name="out" type="xs:integer" />
                </xs:complexType>
              </xs:element>
              <xs:element name="dopplerfactor" type="xs:float" minOccurs="1" maxOccurs="1" />
            </xs:sequence>
            <xs:attribute name="systemName" type="systemNameType" />
            <xs:attribute name="userName" type="userNameType" />
          </xs:complexType>
        </xs:element>
            
      </xs:sequence>

      <xs:attribute name="class" type="xs:string"/>
      <xs:attribute name="distanceattenuated" type="yesNoType"/>

    </xs:complexType>

</xs:schema>
