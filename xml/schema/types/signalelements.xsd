<!-- Need annotations                                                 -->
<!-- Attributes need to get types right esp. for enumerated           -->
<!-- Attributes need REQUIRED/IMPLIED                                 -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi ="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:docbook="http://docbook.org/ns/docbook"
           xmlns:jmri="http://jmri.org/xml/schema/JMRIschema"
           xsi:schemaLocation="
                http://jmri.org/xml/schema/JMRIschema http://jmri.org/xml/schema/JMRIschema.xsd
                http://docbook.org/ns/docbook http://jmri.org/xml/schema/docbook/DocBook.xsd
            "
        >
    <xs:complexType name="SignalElementManagerType">
      <xs:annotation>
        <xs:documentation>
          Define the XML stucture for storing the contents of a BlockBossLogic implementation.
        </xs:documentation>
        <xs:appinfo>
            <jmri:usingclass configurexml="true">jmri.jmrit.blockboss.configurexml.BlockBossLogicXml</jmri:usingclass>
        </xs:appinfo>
      </xs:annotation>
      <xs:sequence>
        
        <xs:element name="signalelement" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="sensorname" minOccurs="0" maxOccurs="unbounded" />
              <xs:element name="comment" minOccurs="0" maxOccurs="1" />
            </xs:sequence>
            <xs:attribute name="signal" type="xs:string"/>
            <xs:attribute name="mode" type="xs:integer"/>
            <xs:attribute name="watchedturnout" type="xs:string"/>
            <xs:attribute name="watchedsignal1" type="xs:string"/>
            <xs:attribute name="watchedsignal1alt" type="xs:string"/>
            <xs:attribute name="watchedsignal2" type="xs:string"/>
            <xs:attribute name="watchedsignal2alt" type="xs:string"/>
            <xs:attribute name="watchedsensor1" type="xs:string"/>
            <xs:attribute name="watchedsensor1alt" type="xs:string"/>
            <xs:attribute name="watchedsensor2" type="xs:string"/>
            <xs:attribute name="watchedsensor2alt" type="xs:string"/>
            <xs:attribute name="limitspeed1" type="xs:boolean"/>
            <xs:attribute name="limitspeed2" type="xs:boolean"/>
            <xs:attribute name="useflashyellow" type="xs:boolean"/>
            <xs:attribute name="distantsignal" type="xs:boolean"/>
          </xs:complexType>
        </xs:element>
            
      </xs:sequence>
      <xs:attribute name="class" type="xs:string"/>
    </xs:complexType>

</xs:schema>
