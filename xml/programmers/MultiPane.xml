<?xml version="1.0"?>
<!DOCTYPE programmer-config SYSTEM "programmer-config.dtd">

<programmer-config>
<!-- $Id: MultiPane.xml,v 1.16 2001-12-18 07:16:37 jacobsen Exp $ -->
		<version author="Mark Gurries, Bob Jacobsen" 
					version="2" lastUpdated="20011206"/>

<programmer decoderFilePanes="yes">

	<pane name="Basic">
		<column>

			<dccaddress/>

			<label label=" "/>
			<label label=" "/>
			<display name="Short Address"/>
			<display name="Long Address"/>
			<display name="Address Format"/>
			<label label=" "/>
			<display name="Locomotive Direction" />
			<display name="Speed Step Mode"/>
			<display name="Analog (DC) Operation"/>
		</column>
		<column>
			<display name="User Id #1"/>
			<display name="User Id #2"/>
			<label label=" "/>
<!-- 			<display name="Decoder Version"/> -->
<!-- 			<display name="Manufacturer"/> -->
		</column>
	</pane>
	
	<pane name="Motor">
		<column>
			<display name="Kick Start"/>
			<display name="Accel"/>
			<display name="Decel"/>
			<label label=" "/>
			<display name="Total PWM Period"/>
		</column>
		<column>
			<display name="EMF Static Config"/>  <!-- Not an NMRA S&RP term -->
			<display name="EMF Dynamic Config"/>  <!-- Not an NMRA S&RP term -->
			<display name="EMF Droop Config"/>  <!-- Not an NMRA S&RP term -->
			<display name="EMF Feedback Cutout"/>
		</column>
	</pane>
	
	<pane name="Speed Control">
		<column>
			<display name="Speed Table Definition" 
					format="offradiobutton" layout="above" label=""/>
			<row>
				<column>
					<display name="Vstart" layout="below" format="vslider"/>
					<display name="Vstart" layout="below"/>
				</column>
				<column>
					<display name="Vmid" layout="below" format="vslider"/>
					<display name="Vmid" layout="below"/>
				</column>
				<column>
					<display name="Vhigh" layout="below" format="vslider"/>
					<display name="Vhigh" layout="below"/>
				</column>
			</row>
			<display name="Forward Trim"/>
			<display name="Reverse Trim"/>
		</column>
		<column>
			<display name="Speed Table Definition" 
					format="onradiobutton" layout="above" label=""/>
			<display name="Speed Table" layout="above"/>
		</column>
	</pane>

	<pane name="Function Map">
		<column>
			<fnmapping/>
		</column>
	</pane>

	<pane name="Lights">
		<column>
			<display name="Directional Headlights"/>
			<label label=" "/>
			
			<display name="Function F0F effect generated"/>
			<display name="Function F0F behaviour"/>
			<label label=" "/>
			
			<display name="Function F0R effect generated"/>
			<display name="Function F0R behaviour"/>
			<label label=" "/>
			
			<display name="Function 1 effect generated"/>
			<display name="Function 1 behaviour"/>
			<label label=" "/>
			
			<display name="Function 2 effect generated"/>
			<display name="Function 2 behaviour"/>
			<label label=" "/>
			
			<display name="Function 3 effect generated"/>
			<display name="Function 3 behaviour"/>
			<label label=" "/>
			
			<display name="Function 4 effect generated"/>
			<display name="Function 4 behaviour"/>
			<label label=" "/>
			
			<display name="Function 5 effect generated"/>
			<display name="Function 5 behaviour"/>
			<label label=" "/>
			
			<display name="Function 6 effect generated"/>
			<display name="Function 6 behaviour"/>
			<label label=" "/>
			
			<display name="Function 7 effect generated"/>
			<display name="Function 7 behaviour"/>
			<label label=" "/>
			
			<display name="Function 8 effect generated"/>
			<display name="Function 8 behaviour"/>
		</column>
		<column>
			<display name="Analog Mode Function Status - FL(f)" format="checkbox"/>			
			<display name="Analog Mode Function Status - FL(r)" format="checkbox"/>			
			<display name="Analog Mode Function Status - F1" format="checkbox"/>			
			<display name="Analog Mode Function Status - F2" format="checkbox"/>			
			<display name="Analog Mode Function Status - F3" format="checkbox"/>			
			<display name="Analog Mode Function Status - F4" format="checkbox"/>			
			<display name="Analog Mode Function Status - F5" format="checkbox"/>			
			<display name="Analog Mode Function Status - F6" format="checkbox"/>			
			<display name="Analog Mode Function Status - F7" format="checkbox"/>			
			<display name="Analog Mode Function Status - F8" format="checkbox"/>			
		</column>
		<column>
			<display name="Output 1 effect generated"/>
			<label label=" "/>
			
			<display name="Output 2 effect generated"/>
			<label label=" "/>
			
			<display name="Output 3 effect generated"/>
			<label label=" "/>
			
			<display name="Output 4 effect generated"/>
			<label label=" "/>
			
			<display name="Output 5 effect generated"/>
			<label label=" "/>
			
			<display name="Output 6 effect generated"/>
			<label label=" "/>
			
			<display name="Output 7 effect generated"/>
			<label label=" "/>
			
			<display name="Output 8 effect generated"/>
		</column>
	</pane>

	<pane name="Consist">
		<column>
			<display name="Consist Address" />
			<display name="Consist Direction" />
			<display name="Consist Acceleration Adjustment" />
			<display name="Consist Acceleration Adjustment Sign" />
			<display name="Consist Deceleration Adjustment" />
			<display name="Consist Deceleration Adjustment Sign" />
			<separator/>
			<label label="Will decoder respond to function requests at consist address?"/>
			<display name="Consist Address Active For F1" />
			<display name="Consist Address Active For F2" />
			<display name="Consist Address Active For F3" />
			<display name="Consist Address Active For F4" />
			<display name="Consist Address Active For F5" />
			<display name="Consist Address Active For F6" />
			<display name="Consist Address Active For F7" />
			<display name="Consist Address Active For F8" />
			<display name="Consist Address Active For FL in Forward" />
			<display name="Consist Address Active For FL in Reverse" />
		</column>
	</pane>
	
	<pane name="Advanced">
		<column>
			<display name="Advanced Ack" />
			<display name="Packet Time-out Value" />
		</column>
		<column>
			<display name="Radio Power Conversion" />
			<display name="Zero-1 Power Conversion" />
			<display name="Trix Power Conversion" />
			<display name="CTC/Railcommand Power Conversion" />
		</column>		
	</pane>

	<pane name="Sound">
		<column>
		</column>
	</pane>

	<pane name="Sound Levels">
		<column>
		</column>
	</pane>

	<pane name="CVs">
		<column>
			<cvtable/>
		</column>
	</pane>

</programmer>
</programmer-config>
