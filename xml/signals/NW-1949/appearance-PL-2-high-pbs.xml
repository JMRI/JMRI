  <aspecttable>NW-1949</aspecttable>
  <name>Double position light high permissive signal</name>
  <reference>As described in the Norfolk and Western Railway Company March 1949, Rules and Regulations for the Government of the Operating Department: Diagrams of Signal Aspects </reference>
  <description>Appearances for a two high position light signal</description>

  <appearances>

	<appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>dark</show>
      <reference>Page 101</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>yellow</show>
      <show>green</show>
      <reference>Page 102</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-282.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>Page 103</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-282A.gif</imagelink>
    </appearance>

	<appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>dark</show>
      <reference>Page 105</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-285.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 107</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop and Proceed</aspectname>
      <show>red</show>
      <show>dark</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NW-1949/PL-2-high-pbs/rule-291.gif</imagelink>
    </appearance>
  </appearances>

  <specificappearances>
    <danger>
      <aspect>Stop and Proceed</aspect>
    </danger>
    <held>
      <aspect>Stop and Proceed</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach Medium</advancedAspect>
      <ourAspect>Advance Approach</ourAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Advance Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Medium Clear</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Advance Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Proceed</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Stay</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

  </aspectMappings>
</appearancetable>
