  <aspecttable>NS</aspecttable>
  <name>Single head 3 color light high signal</name>
  <reference>As described in the NS Operating Rules Book Effective May 1, 2008.</reference>
  <description>Appearances for a three lamp signal head without other badging</description>

  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <reference>N281 (c2)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NS-2008/CLS-3-hi/rule-N281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>flashyellow</show>
      <reference>N282a (c2)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NS-2008/CLS-3-hi/rule-N282-A.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <reference>N285 (c2)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NS-2008/CLS-3-hi/rule-N285.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>red</show>
      <reference>N290 (c2)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NS-2008/CLS-3-hi/rule-N290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop Signal</aspectname>
      <show>red</show>
      <reference>N292 (c2)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NS-2008/CLS-3-hi/rule-N292.gif</imagelink>
    </appearance>

  </appearances>
  <specificappearances>
    <danger>
      <aspect>Stop Signal</aspect>
    </danger>
    <held>
      <aspect>Stop Signal</aspect>
    </held>
  </specificappearances>

