  <aspects>

    <aspect>
      <name>Clear</name>
      <rule>Rule 281</rule>
      <indication>Proceed.</indication>
      <reference>Page 76</reference>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>

    </aspect>

    <aspect>
      <name>Approach Limited</name>
      <rule>Rule 281B</rule>
      <indication>Proceed approaching next signal at limited speed.</indication>
      <reference>Page 77</reference>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
      <route>Normal</route>

    </aspect>

    <aspect>
      <name>Limited Clear</name>
      <rule>Rule 281C</rule>
      <indication>Proceed; limited speed within interlocking limits.</indication>
      <reference>Page 78</reference>
      <speed>Limited</speed>
      <speed2>Limited</speed2>

      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Approach Medium</name>
      <rule>Rule 282</rule>
      <indication>Proceed approaching next signal or block marker at medium speed.</indication>
      <reference>Page 79</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>

    </aspect>

    <aspect>
      <name>Advance Approach</name>
      <rule>Rule 282A</rule>
      <indication>Proceed preparing to stop at second signal.</indication>
      <reference>Page 80</reference>
      <speed>Limited</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Medium Clear</name>
      <rule>Rule 283</rule>
      <indication>Proceed; medium speed within interlocking limits.</indication>
      <reference>Page 81</reference>
      <speed>Medium</speed>
      <speed2>Normal</speed2>

      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Medium Approach Slow</name>
      <rule>Rule 283B</rule>
      <indication>Proceed at medium speed approaching next signal at slow speed.</indication>
      <reference>Page 82</reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Approach Slow</name>
      <rule>Rule 284</rule>
      <indication>Proceed approaching next signal at slow speed. Train exceeding medium speed must at once reduce to that speed.</indication>
      <reference>Page 83</reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>

      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Approach</name>
      <rule>Rule 285</rule>
      <indication>Proceed preparing to stop at next signal. Train exceeding medium speed must at once reduce to that speed.</indication>
      <reference>Page 84</reference>
      <speed>Medium</speed>
      <speed2>Stop</speed2>

      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Medium Approach</name>
      <rule>Rule 286</rule>
      <indication>Proceed at medium speed preparing to stop at next signal</indication>
      <reference>Page 86</reference>
      <speed>Medium</speed>
      <speed2>Stop</speed2>
      <route>Diverging</route>

    </aspect>

    <aspect>
      <name>Slow Clear</name>
      <rule>Rule 287</rule>
      <indication>Proceed; slow speed within interlocking limits.</indication>
      <reference>Page 87</reference>
      <speed>Slow</speed>
      <speed2>Normal</speed2>

      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Slow Approach</name>
      <rule>Rule 288</rule>
      <indication>Proceed preparing to stop at next signal; slow speed within interlocking limits.</indication>
      <reference>Page 88</reference>
      <speed>Slow</speed>
      <speed2>Stop</speed2>

      <route>Either</route>
    </aspect>

    <aspect>
      <name>Permissive</name>
      <rule>Rule 289</rule>
      <indication>Proceed; Block occupied; proceede prepared to stop short of a train or obstruction, but not to exceed 15 miles per hour.</indication>
      <reference>Page 89</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Restricting</name>
      <rule>Rule 290</rule>
      <indication>Proceed at restricted speed.</indication>
      <reference>Page 90</reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>

      <route>Either</route>
    </aspect>

    <aspect>
      <name>Stop and Proceed</name>
      <rule>Rule 291</rule>
      <indication>Stop; then proceed at restricted speed.</indication>
      <reference>Page 91</reference>
      <speed>Stop</speed>
      <speed2>Restricted</speed2>

      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Stop</name>
      <rule>Rule 292</rule>
      <indication>Stop.</indication>
      <reference>Page 93</reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>

      <route>Either</route>
    </aspect>

  </aspects>

