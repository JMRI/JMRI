  <aspecttable>Norway-2001</aspecttable>

  <name>Main 2-lamp Signal</name>
  
  <description>This uses a single head with red over green</description>
  <description>Used before diverging or difficult routes in station</description>
  
  <appearances>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>      
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2-20b.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/20B.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Diverging</aspectname>
      <show>green</show>      
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2-21.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/21.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Off</aspectname>
      <show>dark</show>      
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2-dark.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/unlit.gif</imagelink>
    </appearance>

  </appearances>
  
  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <permissive>
      <aspect>Off</aspect>
    </permissive>
    <held>
      <aspect>Stop</aspect>
    </held>
    <dark>
      <aspect>Off</aspect>
    </dark>

  </specificappearances>
  
  <aspectMappings>
   <aspectMapping>
     <advancedAspect>Stop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>   


   <aspectMapping>
     <advancedAspect>Expect Stop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Expect Diverging</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Expect Clear</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>   

   <aspectMapping>
     <advancedAspect>Clear Expect Stop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear Expect Diverging</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear Expect Clear</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>   

   <aspectMapping>
     <advancedAspect>Diverging Expect Stop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging Expect Diverging</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging Expect Clear</advancedAspect>
     <ourAspect>Diverging</ourAspect>
   </aspectMapping>   

   
   <aspectMapping>
     <advancedAspect>Off</advancedAspect>
     <ourAspect>Stop</ourAspect>
   </aspectMapping>
  </aspectMappings>
</appearancetable>  
