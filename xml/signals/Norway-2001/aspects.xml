  <aspects>



    <aspect>
      <name>Off</name>
      <indication>Proceed at Caution</indication>
      <description>Dark signal.</description>
      <comment>3 and 2 lamp signal</comment>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>31</dccAspect>
    </aspect>

    <aspect>
      <name>Stop</name>
      <rule>Rule 248</rule>
      <indication>Stop before the mast</indication>
      <description>Red, Signal 20b and flashred, 20a for Blocks</description>
      <comment>Used in Stations and Blocks. Flashing for blocks</comment>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>0</dccAspect>
    </aspect>
    <aspect>
      <name>Diverging</name>
      <rule>Rule 247</rule>
      <indication>Proceed on Diverging route</indication>
      <description>1 green, Signal 21, 3 and 2 lamp</description>
      <comment>Station exit and block signal</comment>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
      <dccAspect>21</dccAspect>
    </aspect>
    <aspect>
      <name>Clear</name>
      <rule>Rule 247</rule>
      <indication>Proceed, Signal 22, no diverging</indication>
      <description>2 green, 3 lamp</description>
      <comment>Station area and block signal</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>22</dccAspect>
    </aspect>





    <aspect>
      <name>Clear Expect Stop</name>
      <indication>Proceed preparing to stop at next signal</indication>
      <description>2 Green over flashing orange, 3 lamp over 2 lamp signal 23</description>
      <comment>Block signal and Station area enter</comment>
      <speed>Normal</speed>
      <speed2>Stop</speed2>
      <route>Normal</route>
      <dccAspect>5</dccAspect>
    </aspect>
    <aspect>
      <name>Clear Expect Clear</name>
      <indication>Proceed, expect clear at next signal</indication>
      <description>2 Green over flashing green, 3 lamp over 2 lamp Signal 24</description>
      <comment>3 lamp over 2 lamp. signal</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>6</dccAspect>
    </aspect>
    <aspect>
      <name>Clear Expect Diverging</name>
      <indication>Proceed, expect diverging at next signal</indication>
      <description>2 Green over flashing orenge and green, 3 lamp over 2 lamp Signal 24</description>
      <comment>3 lamp over 2 lamp. signal</comment>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
      <dccAspect>7</dccAspect>
    </aspect>


    <aspect>
      <name>Diverging Expect Stop</name>
      <indication>Proceed over diverging, expect stop at next signal</indication>
      <description>1 Green over flashing orange, 3 lamp over 2 lamp signal 23</description>
      <comment>3 lamp over 2 lamp. signal</comment>
      <speed>Medium</speed>
      <speed2>Stop</speed2>
      <route>Diverging</route>
      <dccAspect>8</dccAspect>
    </aspect>
    <aspect>
      <name>Diverging Expect Clear</name>
      <indication>Proceed over diverging, expect clear at next signal</indication>
      <description>1 Green over flashing green, 3 lamp over 2 lamp signal 25</description>
      <comment>3 lamp over 2 lamp. signal</comment>
      <speed>Medium</speed>
      <speed2>Normal</speed2>
      <route>Diverging</route>
      <dccAspect>9</dccAspect>
    </aspect>
    <aspect>
      <name>Diverging Expect Diverging</name>
      <indication>Proceed over diverging, preparing to diverge at next signal</indication>
      <description>1 Green over flashing orange and green, 3 lamp over 2 lamp signal 24</description>
      <comment>3 lamp over 2 lamp. signal</comment>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
      <dccAspect>10</dccAspect>
    </aspect>




    <aspect>
      <name>Expect Stop</name>
      <indication>Proceed: be prepared to find the next signal displaying Stop aspect</indication>
      <description>Orange flashing, Signal 23</description>
      <comment>Distant Signal</comment>
      <speed>Medium</speed>
      <speed2>Stop</speed2>
      <route>Normal</route>
      <dccAspect>23</dccAspect>
    </aspect>
    <aspect>
      <name>Expect Diverging</name>
      <indication>Proceed: be prepared to find the next signal displaying Proceed Diverging aspect</indication>
      <description>Green and orange flashing, Signal 24</description>
      <comment>Distant Signal</comment>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
      <dccAspect>24</dccAspect>
    </aspect>
    <aspect>
      <name>Expect Clear</name>
      <indication>Proceed: be prepared to find the next signal displaying Clear aspect</indication>
      <description>Green flashing, Signal 25</description>
      <comment>Distant Signal</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>25</dccAspect>
    </aspect>


    
 


  </aspects>

