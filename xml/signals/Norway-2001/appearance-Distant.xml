  <aspecttable>Norway-2001</aspecttable>

  <name>Distant 2-lamp Signal</name>
  
  <description>This uses a single head with flashing yellow and green</description>
  <description>Used as distant signal for both block and station</description>
  
  <appearances>

    <appearance>
      <aspectname>Expect Stop</aspectname>
      <show>flashyellow</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2dist-23.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/23.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Expect Diverging</aspectname>
      <show>flashyellow</show>
      <show>flashgreen</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2dist-24.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/24.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Expect Clear</aspectname>
      <show>flashgreen</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2dist-25.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/25.gif</imagelink>
    </appearance>        
    <appearance>
      <aspectname>Off</aspectname>
      <show>dark</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/2dist-dark.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/unlit.gif</imagelink>
    </appearance>

  </appearances>
  
  <specificappearances>
    <danger>
      <aspect>Off</aspect>
    </danger>
    <permissive>
      <aspect>Off</aspect>
    </permissive>
    <held>
      <aspect>Off</aspect>
    </held>
	<dark>
      <aspect>Off</aspect>
    </dark>
  </specificappearances>
  
  <aspectMappings>
   <aspectMapping>
     <advancedAspect>Stop</advancedAspect>
     <ourAspect>Expect Stop</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging</advancedAspect>
     <ourAspect>Expect Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear</advancedAspect>
     <ourAspect>Expect Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Off</advancedAspect>
     <ourAspect>Expect Stop</ourAspect>
   </aspectMapping>
 

   <aspectMapping>
     <advancedAspect>Clear Expect Stop</advancedAspect>
     <ourAspect>Expect Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear Expect Diverging</advancedAspect>
     <ourAspect>Expect Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear Expect Clear</advancedAspect>
     <ourAspect>Expect Clear</ourAspect>
   </aspectMapping>


   <aspectMapping>
     <advancedAspect>Diverging Expect Stop</advancedAspect>
     <ourAspect>Expect Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging Expect Diverging</advancedAspect>
     <ourAspect>Expect Diverging</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging Expect Clear</advancedAspect>
     <ourAspect>Expect Diverging</ourAspect>
   </aspectMapping>


  </aspectMappings>

</appearancetable>  
