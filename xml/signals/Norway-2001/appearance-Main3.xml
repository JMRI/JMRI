  <aspecttable>Norway2001</aspecttable>

  <name>Main 3-lamp Signal</name>
  
  <description>This uses a single head with green, red and green</description>
  <description>Used in stations, outside staitions and on blocks</description>
  <description>Red is flashing if used as a block signal</description>
  
  <appearances>

    <appearance>
      <aspectname>BlockStop</aspectname>
      <show>flashred</show>  
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/3-20A.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/20A.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>  
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/3-20B.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/20B.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>green</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/3-22.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/22.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Diverging</aspectname>
      <show>green</show>
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/3-21.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/21.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Off</aspectname>
      <show>dark</show>      
      <imagelink type="large">../../../resources/icons/NorwegianSignals/Large/3-dark.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/NorwegianSignals/Aspects/unlit.gif</imagelink>
    </appearance>

  </appearances>
  
  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <permissive>
      <aspect>Off</aspect>
    </permissive>
    <held>
      <aspect>Stop</aspect>
    </held>
    <dark>
      <aspect>Off</aspect>
    </dark>
  </specificappearances>



   <!-- this mast has none or every other mast ahead !!???  -->
  
  <aspectMappings>
   <aspectMapping>
     <advancedAspect>Stop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>BlockStop</advancedAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping> 
   <aspectMapping>
     <advancedAspect>Diverging</advancedAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   
   <aspectMapping>
     <advancedAspect>Clear</advancedAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>
   


   <!-- we need to have all possible advanced aspects even though they have nothing to do with our aspect !!!???  -->
   <aspectMapping>
     <advancedAspect>Expect Stop</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Expect Diverging</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   
   <aspectMapping>
     <advancedAspect>Expect Clear</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   


   <aspectMapping>
     <advancedAspect>Clear Expect Stop</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Clear Expect Diverging</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   
   <aspectMapping>
     <advancedAspect>Clear Expect Clear</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   

   <aspectMapping>
     <advancedAspect>Diverging Expect Stop</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>
   <aspectMapping>
     <advancedAspect>Diverging Expect Diverging</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   
   <aspectMapping>
     <advancedAspect>Diverging Expect Clear</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>Diverging</ourAspect>
     <ourAspect>Clear</ourAspect>
   </aspectMapping>   





   <aspectMapping>
     <advancedAspect>Off</advancedAspect>
     <ourAspect>Stop</ourAspect>
     <ourAspect>BlockStop</ourAspect>
   </aspectMapping>
  </aspectMappings>
</appearancetable>  
