  <aspects>

    <aspect>
      <name>Clear</name>
      <indication>Proceed</indication>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
    </aspect>

    <aspect>
      <name>Approach</name>
      <indication>Proceed preparing to stop at next signal</indication>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
    </aspect>

    <aspect>
      <name>Advanced Approach</name>
      <indication>Proceed preparing to stop at second signal</indication>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
    </aspect>

    <aspect>
      <name>Stop</name>
      <indication>Stop</indication>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
    </aspect>

    <aspect>
      <name>Diverging Clear</name>
      <indication>Proceed through (first) diverging route</indication>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Secondary Diverging Clear</name>
      <indication>Proceed through two successive diverging routes, or through second diverging route</indication>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Diverging Approach</name>
      <indication>Proceed through (first) diverging route preparing to stop at next signal</indication>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Diverging Advanced Approach</name>
      <indication>Proceed through (first) diverging route preparing to stop at second signal</indication>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Secondary Diverging Approach</name>
      <indication>Proceed through two consecutive diverging routes, or second diverging route, preparing to stop at next signal</indication>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Secondary Diverging Advanced Approach</name>
      <indication>Proceed through two consecutive diverging routes, or second diverging route, preparing to stop at second signal</indication>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Unlit</name>
      <indication>Unlit</indication>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
    </aspect>
    
  </aspects>

  <imagetypes>
    <imagetype type="aspects" />
    <imagetype type="noflash" />
  </imagetypes>

