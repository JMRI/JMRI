  <aspecttable>CCOR-1967</aspecttable>
  <name>Double head signal A-C</name>
  <reference>As described in The Consolidated Code of Operating Rules, Edition of 1967. Pages 53-55</reference>
  <description>Appearances for a two-head absolute block signal without middle arm</description>

  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>Page 53, Rule 240E</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240E.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>flashyellow</show>
      <show>red</show>
      <reference>Page 54, Rule 240F</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240F.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Diverging</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>Page 54, Rule 240G</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240G.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference>Page 53, Rule 240D</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240D.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Page 55, Rule 240N</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240N-yellow.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting Lunar</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 55, Rule 240N</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240N-lunar.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting Lunar Div</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 55, Rule 240N</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240N-lunar.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Flashing Stop and Proceed</aspectname>
      <show>red</show>
      <show>flashred</show>
      <reference>Page 53, RULE 240C</reference>
	<imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Flashing Stop and Proceed Div</aspectname>
      <show>red</show>
      <show>flashred</show>
      <reference>Page 53, RULE 240C Fig.3</reference>
	<imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <reference>Page 53, RULE 240A</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-2-low/rule-240A.gif</imagelink>
    </appearance>
  </appearances>

