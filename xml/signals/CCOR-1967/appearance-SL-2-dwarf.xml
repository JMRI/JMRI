  <aspecttable>CCOR-1967</aspecttable>
  <name>Double head dwarf signal</name>
  <reference>As described in the Consolidated Code of Operating Rules, Edition of 1967. Pages 53-55</reference>
  <description>Appearances for a two-head dwarf signal without other badging</description>
  
  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>Page 53</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240E.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>flashyellow</show>
      <show>red</show>
      <reference>Page 54, RULE 240F Fig.5</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240F.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Diverging</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>Page 54, RULE 240G Fig.4</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240G.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>Page 54, RULE 240M Fig.3</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240M.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Advance Approach</aspectname>
      <show>red</show>
      <show>flashyellow</show>
      <reference>Page 54, RULE 240K Fig.3</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240K.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Page 54</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240L.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference>Page 53</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240D.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting Lunar</aspectname>
      <show>lunar</show>
      <show>red</show>
      <reference>Page 55, Rule 240N Fig.6</reference>
      <comment>Lunar aspect for upper head in route-signal system</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240N-lunar.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting Lunar Div</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 55, Rule 240N Fig.5</reference>
      <comment>Lunar aspect for lower head in route-signal system</comment>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240N-lunarDiv.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Flashing Stop and Proceed</aspectname>
      <show>red</show>
      <show>flashred</show>
      <reference>Page 53, Rule 240C</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Flashing Stop and Proceed Div</aspectname>
      <show>red</show>
      <show>flashred</show>
      <reference>Page 53, Rule 240C</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <reference>Page 53, Rule 240A Fig.5</reference>
      <imagelink>preference:resources/icons/smallschematics/aspects/CCOR-1967/SL-2-dwarf/rule-240A.gif</imagelink>
    </appearance>
  </appearances>

