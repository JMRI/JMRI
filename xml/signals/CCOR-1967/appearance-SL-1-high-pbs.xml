  <aspecttable>CCOR-1967</aspecttable>
  <name>Single head permissive signal</name>
  <reference>http://www.gn-npjointarchive.org/GN_Misc/ccor_1967.pdf</reference>
  <description>Appearances for one-head high-mast permissive block signal</description>

  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <reference>Page 53</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CCOR-1967/SL-1-high-pbs/rule-240E.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
