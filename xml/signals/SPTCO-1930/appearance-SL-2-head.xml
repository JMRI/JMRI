  <aspecttable>SPTCO-1930</aspecttable>
  <name>Double searchlight absolute signal</name>
  <reference>As described in the 1930 version of the "Rules and Regulations of the Transportation Department".</reference>
  <description>Appearances for a two-searchlight signal head without other badging</description>
  <appearances>
    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>Rule 504</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/GrnRed.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Diverging Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>Rule 502</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/RedGrn.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference>Rule 503</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/YelRed.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Diverging Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Rule 502A C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/RedYel.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
