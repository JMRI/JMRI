      <reference>Rule 501</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/RedRed.gif</imagelink>
    </appearance>
    <appearance>
      <aspectname>Dark</aspectname>
      <show>dark</show>
      <show>dark</show>
      <imagelink>../../../resources/icons/smallschematics/aspects/SPTCO-1930/SL-2/DrkDrk.gif</imagelink>
    </appearance>
  </appearances>
