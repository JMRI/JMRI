  <aspecttable>RG-1965</aspecttable>
  <name>Double head dwarf absolute signal</name>
  <reference>As described in the 1965 version of the RG publication "Rio Grande Rules of Operating Department".</reference>
  <description>Appearances for an absolute (RG: Positive) two-searchlight dwarf signal with (P)-badge.</description>
  
  <appearances>

    <appearance>
      <aspectname>Diverging Approach Medium</aspectname>
      <show>red</show>
      <show>flashyellow</show>
      <reference>Rule 281B</reference>
      <imagelink>program:resources/icons/smallschematics/aspects/RG-1965/SL-2-low-abs/rule-281B.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>Rule 283</reference>
      <imagelink>program:resources/icons/smallschematics/aspects/RG-1965/SL-2-low-abs/rule-283.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Rule 286</reference>
      <imagelink>program:resources/icons/smallschematics/aspects/RG-1965/SL-2-low-abs/rule-286.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <reference>Rule 292 (unofficial)</reference>
      <imagelink>program:resources/icons/smallschematics/aspects/RG-1965/SL-2-low-abs/rule-292.gif</imagelink>
    </appearance>

  </appearances>
  
  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Diverging Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach Medium</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Diverging Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach Medium</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Diverging Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
      <ourAspect>Diverging Clear</ourAspect>
    </aspectMapping>
    
    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
      <ourAspect>Diverging Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
      <ourAspect>Diverging Approach Medium</ourAspect>
    </aspectMapping>

     <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Approach</ourAspect>
      <ourAspect>Diverging Approach</ourAspect>
    </aspectMapping>

     <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Approach</ourAspect>
      <ourAspect>Diverging Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
  	  <advancedAspect>Stop and Proceed</advancedAspect>
  	  <ourAspect>Approach</ourAspect>
      <ourAspect>Diverging Approach</ourAspect>
	</aspectMapping>
	
  </aspectMappings>
  
