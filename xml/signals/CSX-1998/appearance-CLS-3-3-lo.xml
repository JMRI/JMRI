  <aspecttable>CSX</aspecttable>
  <name>Double head dwarf signal</name>
  <reference>As described in the CSX Transportation Signal Rules - 281-298 January 1998.</reference>
  <description>Appearances for a two-searchlight dwarf signal head without other badging</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>green</show>
      <reference>281 (e)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Limited</aspectname>
      <show>yellow</show>
      <show>flashgreen</show>
      <reference>281-B (d)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-281-B.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Limited Clear</aspectname>
      <show>red</show>
      <show>flashgreen</show>
      <reference>281-C (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-281-C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Limited Approach</aspectname>
      <show>red</show>
      <show>flashyellow</show>
      <reference>281-D (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-281-D.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>yellow</show>
      <show>green</show>
      <reference>282 (d)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-282.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Medium Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>283 (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-283.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Medium Advance Approach</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>283-C (b)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-283-C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Medium Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>286 (c)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-286.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>287 (b)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <reference>288 (b)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-288.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <reference>292 (e)</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-1998/CLS-3-3-lo/rule-292.gif</imagelink>
    </appearance>

  </appearances>
  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

