  <aspecttable>NYC-1956</aspecttable>
  <name>Single searchlight dwarf signal</name>
  <reference>As described in the New York Central System publication "Rules of the Operating Department, Effective October 28, 1956."</reference>
  <description>Appearances for a one-searchlight dwarf signal head</description>
  
  <appearances>

    <appearance>
      <aspectname>Limited Clear</aspectname>
      <show>flashgreen</show>
      <reference>Rule 281C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-1-low/Rule 281C.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Limited-Approach</aspectname>
      <show>flashyellow</show>
      <reference>Rule 281D</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-1-low/Rule 281D.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow-Clear</aspectname>
      <show>green</show>
      <reference>Rule 287</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-1-low/Rule 287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>yellow</show>
      <reference>Rule 290</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-1-low/Rule 290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>Rule 292</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/NYC-1956/SL-1-low/Rule 292.gif</imagelink>
    </appearance>

  </appearances>
  <specificappearances>
  	<danger>
  		<aspect>Stop</aspect>
  	</danger>
  	<held>
  		<aspect>Stop</aspect>
  	</held>
  </specificappearances>
  
  <aspectMappings>
  
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Limited Clear</ourAspect>
      <ourAspect>Slow-Clear</ourAspect>
    </aspectMapping>
  
    <aspectMapping>
      <advancedAspect>Advance Approach Medium</advancedAspect>
      <ourAspect>Limited Clear</ourAspect>
      <ourAspect>Slow-Clear</ourAspect>
    </aspectMapping>
   
    <aspectMapping>
      <advancedAspect>Approach Limited</advancedAspect>
      <ourAspect>Limited Clear</ourAspect>
      <ourAspect>Slow-Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
