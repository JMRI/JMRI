  <aspects>
    <aspect>
      <name>Stop</name>
      <indication>Stop</indication>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>0</dccAspect>
    </aspect>
    <aspect>
      <name>Clear</name>
      <indication>Proceed</indication>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>2</dccAspect>
    </aspect>
    <aspect>
      <name>Restricting</name>
      <indication>Proceed with caution</indication>
      <speed>Restricting</speed>
      <speed2>Restricting</speed2>
      <route>Normal</route>
      <dccAspect>3</dccAspect>
    </aspect>
    <aspect>
      <name>Approach</name>
      <indication>Proceed preparing to stop at next signal</indication>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>1</dccAspect>
    </aspect>
    <aspect>
      <name>Advance Approach</name>
      <indication>Next signal is approach with a short block </indication>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
      <dccAspect>4</dccAspect>
    </aspect>
    <aspect>
      <name>Slow Approach</name>
      <indication>Next signal has a speed restriction</indication>
      <speed>Normal</speed>
      <speed2>Slow</speed2>
      <route>Normal</route>
      <dccAspect>5</dccAspect>
    </aspect>
    <aspect>
      <name>Not Lit</name>
      <rule>Dark</rule>
      <indication>(used to indicate dark for e.g. approach lighting)</indication>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Normal</route>
      <dccAspect>8</dccAspect>
    </aspect>
  </aspects>
