	  <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-CPL-Dwarf-permissive/rule-290 pdwarf.gif</imagelink>
    </appearance>
	
    <appearance>
      <aspectname>Stop and Proceed</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 66</reference>
	  <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-CPL-Dwarf-permissive/rule-291 pdwarf.gif</imagelink>
    </appearance>
	
  </appearances>
	
  <specificappearances>
  
    <danger>
      <aspect>Stop and Proceed</aspect>
    </danger>
	
    <held>
      <aspect>Stop and Proceed</aspect>
