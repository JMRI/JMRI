  <description>Appearances for N&amp;W CPL permissive dwarf signals</description>
  
  <appearances>
	
    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <reference>Page 64</reference>
	  <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-CPL-Dwarf-permissive/rule-287 pdwarf.gif</imagelink>
    </appearance>
	
    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>yellow</show>
      <show>lunar</show>
      <reference>Page 64</reference>
