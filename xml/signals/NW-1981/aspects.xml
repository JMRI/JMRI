  </copyright>

  <authorgroup xmlns="http://docbook.org/ns/docbook" >
    <author>
        <personname><firstname>Greg</firstname><surname>McCartney</surname></personname>
        <email>gpmccartney@gmail.com</email>
    </author>
  </authorgroup>

  <revhistory xmlns="http://docbook.org/ns/docbook">

    <revision>

        <revnumber>1</revnumber>
        <date>2015-10-19</date>
        <authorinitials>GPM</authorinitials>
        <revremark>Initial version of the signal set.</revremark>
    </revision>
    <revision>
        <revnumber>2</revnumber>
        <date>2016-01-26</date>
        <authorinitials>GPM</authorinitials>
        <revremark>Corrected the aspect mapping and added the NW color, search, and semaphore signals.</revremark>
    </revision>
    <revision>
        <revnumber>2.1</revnumber>
        <date>2016-11-24</date>
        <authorinitials>ST</authorinitials>
        <revremark>Added default aspect numbers</revremark>
	</revision>
	<revision>
        <revnumber>2.2</revnumber>
        <date>2018-11-27</date>
        <authorinitials>GPM</authorinitials>
        <revremark>Changed speed1 and speed2 from Restricting to Restricted under aspect Restricting.</revremark>
	</revision>

  </revhistory>

  <aspects>

    <aspect>
      <name>Clear</name>
      <rule>Rule 281</rule>
      <indication>Proceed at prescribed speed</indication>
      <reference>Page 60</reference>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <dccAspect>14</dccAspect>
    </aspect>

    <aspect>
      <name>Approach Diverging</name>
      <rule>Rule 282</rule>
      <indication>Proceed preparing to take diverging route beyond next signal at prescribed speed.</indication>
      <reference>Page 61</reference>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <dccAspect>13</dccAspect>
    </aspect>

    <aspect>
      <name>Advance Approach</name>
      <rule>Rule 282A</rule>
      <indication>Proceed preparing to stop at the second signal</indication>
      <reference>Page 61</reference>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <dccAspect>12</dccAspect>
    </aspect>

    <aspect>
      <name>Diverging Clear</name>
      <rule>Rule 283</rule>
      <indication>Proceed through turnout or turnouts at prescribed speed.</indication>
      <reference>Page 62</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
      <dccAspect>11</dccAspect>
    </aspect>

    <aspect>
      <name>Diverging Approach Diverging</name>
      <rule>Rule 283B</rule>
      <indication>Proceed through turnout or turnouts at prescribed speed preparing to take diverging route beyond next signal at prescribed speed.</indication>
      <reference>Page 62</reference>
      <speed>Medium</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
      <dccAspect>10</dccAspect>
    </aspect>

    <aspect>
      <name>Approach</name>
      <rule>Rule 285</rule>
      <indication>Proceed preparing to stop at next signal.</indication>
      <reference>Page 63</reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>
      <dccAspect>8</dccAspect>
    </aspect>

    <aspect>
      <name>Diverging Approach</name>
      <rule>Rule 286</rule>
      <indication>Proceed through turnout or turnouts at prescribed speed preparing to stop at next signal.</indication>
      <reference>Page 64</reference>
      <speed>Medium</speed>
      <speed2>Slow</speed2>
      <route>Diverging</route>
      <dccAspect>6</dccAspect>
    </aspect>

    <aspect>
      <name>Slow Clear</name>
      <rule>Rule 287</rule>
      <indication>Proceed; Slow speed within interlocking limits or through turnout or turnouts.</indication>
      <reference>Page 64</reference>
      <speed>Slow</speed>
      <speed2>Normal</speed2>
      <route>Either</route>
      <dccAspect>5</dccAspect>
    </aspect>

    <aspect>
      <name>Slow Approach</name>
      <rule>Rule 288</rule>
      <indication>Proceed preparing to stop at next signal; Slow speed within interlocking limits or through turnout or turnouts.</indication>
      <reference>Page 65</reference>
      <speed>Slow</speed>
      <speed2>Slow</speed2>
      <route>Either</route>
      <dccAspect>4</dccAspect>
    </aspect>

    <aspect>
      <name>Restricting</name>
      <rule>Rule 290</rule>
      <indication>Proceed at restricted speed.</indication>
      <reference>Page 65</reference>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Either</route>
      <dccAspect>2</dccAspect>
    </aspect>

    <aspect>
      <name>Stop and Proceed</name>
      <rule>Rule 291</rule>
      <indication>Stop; then proceed at restricted speed.</indication>
      <reference>Page 66</reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Normal</route>
      <dccAspect>1</dccAspect>
    </aspect>

    <aspect>
      <name>Stop and Stay</name>
      <rule>Rule 292</rule>
      <indication>Stop and stay.</indication>
      <reference>Page 66</reference>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
      <dccAspect>0</dccAspect>
    </aspect>

  </aspects>

