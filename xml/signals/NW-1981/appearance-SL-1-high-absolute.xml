    </appearance>
	
    <appearance>
      <aspectname>Stop and Stay</aspectname>
      <show>red</show>
      <reference>Page 66</reference>
	  <imagelink>../../../resources/icons/smallschematics/aspects/NW-1981/NW-SL-1-high-absolute/rule-292.gif</imagelink>
    </appearance>
	
  </appearances>
	
  <specificappearances>
    <danger>
      <aspect>Stop and Stay</aspect>
    </danger>
    <held>
      <aspect>Stop and Stay</aspect>
    </held>
  </specificappearances>
	
