    </appearance>
    
	<appearance>
      <aspectname>Stop and Proceed</aspectname>
      <show>red</show>
      <reference>Rule 291</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CSX-2014-Chessie/CO-3p-lo/rule-C1291.gif</imagelink>
    </appearance>
    
	<appearance>
