  <aspecttable>WPRR-1971</aspecttable>
  <name>Double head high searchlight absolute signal</name>
  <reference>Signal definitions corresponding to pages 132-135 from the 1971 "Western Pacific Railroad Company - Operating Rules" binder.</reference>
  <reference>Mast definitions and aspect progression documented in "WP Signal Aspects and Masts.XLSX".</reference>
  <description>Appearances for double-head high searchlight with A-plate or without number plate and without markers.</description>
  
  <appearances>

    <appearance>
      <aspectname>Dark</aspectname>
      <show>dark</show>
	  <show>dark</show>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/dark.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
	  <show>dark</show>
      <reference>Page 132</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>flashyellow</show>
	  <show>dark</show>
      <reference>Page 132</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-282.gif</imagelink>
    </appearance>

     <appearance>
      <aspectname>Diverging Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>Page 132</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-283.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
	  <show>dark</show>
      <reference>Page 132</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-285.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Approach</aspectname>
      <show>red</show>
      <show>flashyellow</show>
	  <reference>Page 134</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-286.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Restricting</aspectname>
      <show>red</show>
      <show>yellow</show>
	  <reference>Page 134</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting Diverging</aspectname>
      <show>red</show>
      <show>flashred</show>
	  <reference>Page 134</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-288-A.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
	  <show>red</show>
      <reference>Page 134</reference>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/rule-292.gif</imagelink>
    </appearance>
    
  </appearances>
  
  <specificappearances>
    <!-- Start of Specific Appearances list -->

    <danger>
      <aspect>Stop</aspect>
    </danger>

    <held>
      <aspect>Stop</aspect>
    </held>

    <dark>
      <aspect>Dark</aspect>
      <imagelink>preference:resources/WPRR-1971/SL-2-high-A/dark.gif</imagelink>
    </dark>

  </specificappearances>

