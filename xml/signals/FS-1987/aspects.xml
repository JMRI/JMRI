  <aspects>
    <aspect>
        <name>Rosso</name>
        <indication>Stop</indication>
	  <description>One red light</description>
	  <description>shunting movements are allowed by dwarf signals</description>
	  <comment>segnale chiuso</comment>
        <speed>Stop</speed>
        <speed2>Stop</speed2>
        <route>Either</route>
    </aspect>

    <aspect>
      <name>Giallo</name>
      <indication>Expect stop, prepare to stop at next main signal</indication>
	  <description>One yellow light</description>
	  <description>if used alone next signal is red</description>
	  <comment>segnale aperto</comment>
      <speed>Medium</speed>
      <speed2>Stop</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Verde</name>
      <indication>Proceed, line is clear (with timetable speed)</indication>
	  <description>One green light</description>
	  <comment>segnale aperto</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Giallo Lampeggiante</name>
      <indication>1. Next signal is not red but closer to further red signal 2. Used with blinking green as speed advice</indication>
	  <description>Blinking Yellow</description>
	  <comment>da usare per 1. o 2. vela</comment>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo</name>
      <indication>Diverging Approach</indication>
	  <description>Red-Yellow</description>
	  <comment>da usare per 1. e 2. vela</comment>
      <speed>Slow</speed>
      <speed2>Restricted</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo Lampeggiante</name>
      <indication>Diverging Approach</indication>
	  <description>Red-Blinking Yellow</description>
	  <comment>da usare per 1. e 2. vela</comment>
      <speed>Slow</speed>
      <speed2>Limited</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Rosso-Verde</name>
      <indication>Diverging Clear</indication>
	  <description>Red-Green</description>
	  <comment>da usare per 1. e 2. vela</comment>
      <speed>Slow</speed>
      <speed2>Normal</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Giallo-Giallo</name>
      <indication>Diverging Approach</indication>
	  <description>Yellow-Yellow</description>
	  <comment>da usare per 1. e 2. vela</comment>
      <speed>Restricted</speed>
      <speed2>Restricted</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Giallo-Verde</name>
      <indication>Diverging Approach</indication>
	  <description>Yellow-Green</description>
	  <comment>next main signal is set to diverging route max. 30 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Giallo-Verde Lampeggiante</name>
      <indication>Diverging Approach</indication>
	  <description>Blinking Yellow-Green</description>
	  <comment>next main signal is set to diverging route max. 60 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Limited</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Giallo-Verde Lampeggiante Alt.</name>
      <indication>Diverging Approach</indication>
	  <description>Alternate Blinking Yellow-Green</description>
	  <comment>next main signal is set to diverging route max. 100 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo-Verde</name>
      <indication>Diverging Approach</indication>
	  <description>Alternate Blinking Yellow-Green</description>
	  <comment>Diverging clear and next main signal is set to diverging route max. 30 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Slow</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo-Verde Lampeggiante</name>
      <indication>Diverging Approach</indication>
	  <description>Alternate Blinking Yellow-Green</description>
	  <comment>Diverging clear and next main signal is set to diverging route max. 60 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Medium</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo-Verde Lampeggiante Alt.</name>
      <indication>Diverging Approach</indication>
	  <description>Alternate Blinking Yellow-Green</description>
	  <comment>Diverging clear and next main signal is set to diverging route max. 100 Km/h</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Rosso-Giallo-Giallo</name>
      <indication>Diverging Approach</indication>
	  <description>Alternate Blinking Yellow-Green</description>
	  <comment>Diverging approach</comment>
      <speed>Slow</speed>
      <speed2>RestrictedSlow</speed2>
      <route>Diverging</route>
    </aspect>

    <aspect>
      <name>Spento</name>
      <indication>Unlit aspect=red - aspect used for squared single searchlight signal only</indication>
      <comment>Used on double-track mainline when direction is not inverted</comment>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
    </aspect>

    <aspect>
      <name>Fermata</name>
      <indication>Shunting-Stop</indication>
	  <description>Real: 2 horizontal white lamps - Panel: dark</description>
	  <comment>Stop</comment>
      <speed>Stop</speed>
      <speed2>Stop</speed2>
      <route>Either</route>
    </aspect>

    <aspect>
      <name>Libero Passaggio</name>
      <indication>Shunting-Clear</indication>
	  <description>Real: 2 vertical white lamps - Panel: white lamp</description>
	  <comment>Diverging approach</comment>
      <speed>RestrictedSlow</speed>
      <speed2>RestrictedSlow</speed2>
      <route>Either</route>   
    </aspect>

  </aspects>

