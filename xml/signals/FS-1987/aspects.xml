  <aspects>
    <aspect>
        <name>Rosso</name>
        <indication>Stop</indication>
	  <description>One red light</description>
	  <description>shunting movements are allowed by dwarf signals.</description>
	  <comment>segnale chiuso</comment>
        <speed>Stop</speed>
        <speed2>Stop</speed2>
    </aspect>

    <aspect>
      <name>Giallo</name>
      <indication>Expect stop, prepare to stop at next main signal</indication>
	  <description>One yellow light</description>
	  <description>if used alone next signal is red</description>
	  <comment>segnale aperto</comment>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
    </aspect>

    <aspect>
      <name>Verde</name>
      <indication>Proceed, line clear (with timetable speed)</indication>
	  <description>One green light</description>
	  <comment>segnale aperto</comment>
      <speed>Normal</speed>
      <speed2>Normal</speed2>
      <route>Normal</route>
    </aspect>

    <aspect>
      <name>Nero</name>
      <indication>used when diverging route is not selected</indication>
	  <description>Dark</description>
	  <comment>da usare per 2. o 3. vela</comment>
      <speed>Normal</speed>
      <speed2>Limited</speed2>
    </aspect>

    <aspect>
      <name>Giallo lampeggiante</name>
      <indication>1. Next signal is not red but closer to further red signal 2. Used with blinking green as speed advice</indication>
	  <description>Blinking yellow</description>
	  <comment>da usare per 1. o 2. vela</comment>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
    </aspect>

    <aspect>
      <name>Verde lampeggiante</name>
      <indication>Used with blinking yellow as speed advice</indication>
	  <description>Blinking green</description>
	  <comment>da usare per 2. o 3. vela</comment>
      <speed>Limited</speed>
      <speed2>Limited</speed2>
    </aspect>
  </aspects>

