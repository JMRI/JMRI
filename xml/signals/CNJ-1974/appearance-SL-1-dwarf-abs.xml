  <aspecttable>CNJ 1974</aspecttable>
  <name>Single searchlight dwarf signal</name>
  <reference>As described in the August 1946 version of the AAR publication "American Railway Signaling Principles and Practices", chapter II.</reference>
  <description>Appearances for a one-searchlight dwarf signal head. All dwarf signals are absolute in the CNJ rules</description>
  
  <appearances>

    <appearance>
      <aspectname>Medium Clear</aspectname>
      <show>flashgreen</show>
      <reference>Page 48 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CNJ-1974/SL-dwarf-abs/rule-283.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Clear</aspectname>
      <show>green</show>
      <reference>Page 48 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CNJ-1974/SL-dwarf-abs/rule-287.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>flashyellow</show>
      <reference>Page 48 C</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CNJ-1974/SL-dwarf-abs/rule-288.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>yellow</show>
      <reference>Page 49 D</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CNJ-1974/SL-dwarf-abs/rule-290.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>Page 50 E</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/CNJ-1974/SL-dwarf-abs/rule-292.gif</imagelink>
    </appearance>

  </appearances>

  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

