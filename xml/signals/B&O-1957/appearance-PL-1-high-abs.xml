  <aspecttable>B&amp;O 1957</aspecttable>
  <name>Single position light high absolute signal</name>
  <reference>As described in the August 1946 version of the AAR publication "American Railway Signaling Principles and Practices", chapter II.</reference>
  <description>Appearances for single position light signal head without other badging.</description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-1-high-abs/rule-281.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-1-high-abs/rule-285.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Permissive</aspectname>
      <show>lunar</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-1-high-abs/rule-289.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-1-high-abs/rule-292.gif</imagelink>
    </appearance>
  </appearances>

  <specificappearances>
    <danger>
      <aspect>Stop</aspect>
    </danger>
    <held>
      <aspect>Stop</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach Medium</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Advance Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Medium Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Permissive</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Proceed</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

  </aspectMappings>

</appearancetable>  
