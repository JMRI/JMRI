<?xml version="1.0"?>
<!DOCTYPE decoder:decoder-config SYSTEM "DTD/decoder-config.dtd">
<decoder:decoder-config xmlns:decoder="http://jmri.sourceforge.net/xml/decoder">
<decoder:decoder>
	<decoder:id model="DH121" mfg="Digitrax" mfgID="129" defnVersion="0"
				comment="DH121 decoder - 2 STD leads"></decoder:id>

	<decoder:programming direct="byteOnly" paged="yes" 
	                     register="yes" ops="yes"></decoder:programming>

	<decoder:variables>
		<decoder:variable name="Address" CV="1" mask="VVVVVVVV" comment="Short address">
			<decoder:decVal min="1" max="127"/>
			</decoder:variable>
		<decoder:variable name="Start voltage" CV="2"
						comment="A value of 255 corresponds to 100%">
			<decoder:decVal></decoder:decVal>
			</decoder:variable>
		<decoder:variable name="Acceleration rate" CV="3">
			<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="Deceleration rate" CV="4">
			<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="Maximum voltage" CV="5">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Midpoint voltage" CV="6">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Version ID" CV="7" readOnly="yes">
				<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="Manufacturer ID" CV="8" readOnly="yes">
				<decoder:decVal max="31"/>
			</decoder:variable>
		<decoder:variable name="F0 Forward during DC operation" CV="13" mask="XVXXXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="F0 Reverse during DC operation" CV="13" mask="VXXXXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="F4 during DC operation" CV="13" mask="XXXXVXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Long Address" CV="17">
			<decoder:longAddressVal/>
			</decoder:variable>
		<decoder:variable name="Advanced Consist address" CV="19">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Normal direction of motion" CV="29" mask="XXXXXXXV">
			<decoder:enumVal>
				<decoder:enumChoice choice="forward"/>
				<decoder:enumChoice choice="reverse"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Speed steps" CV="29" mask="XXXXXXVX">
			<decoder:enumVal>
				<decoder:enumChoice choice="14"/>
				<decoder:enumChoice choice="28/128"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Analog conversion mode" CV="29" mask="XXXXXVXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Speed table" CV="29" mask="XXXVXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Off"/>
				<decoder:enumChoice choice="On"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Addressing mode" CV="29" mask="XXVXXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="2 digit addressing"/>
				<decoder:enumChoice choice="4 digit addressing"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Split field motor" CV="61" mask="XXXXXVXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="Normal DC motor"/>
				<decoder:enumChoice choice="Split field/AC motor"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Directional headlight" CV="61" mask="XXXXXXXV">
			<decoder:enumVal>
				<decoder:enumChoice choice="Normal headlight operation"/>
				<decoder:enumChoice choice="Reverse light lead controlled by F4"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Vstart/Vmid/Vfull in 128 step mode" CV="61" mask="XXXVXXXX">
			<decoder:enumVal>
				<decoder:enumChoice choice="enabled"/>
				<decoder:enumChoice choice="disabled"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Short-circuit protection" CV="61" mask="XVXXXXXX"
				comment="Undocumented feature, occasionally requested by Digitrax tech support">
			<decoder:enumVal>
				<decoder:enumChoice choice="Enabled"/>
				<decoder:enumChoice choice="Disabled"/>
				</decoder:enumVal>
			</decoder:variable>
		<decoder:variable name="Kick start value" CV="65">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Forward trim" CV="66">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Reverse trim" CV="95">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="User private ID #1" CV="105">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="User private ID #2" CV="106">
			<decoder:decVal/>
			</decoder:variable>
		<decoder:variable name="Speed Table" CV="67">
			<decoder:speedTableVal/>
			</decoder:variable>
	</decoder:variables>
	
</decoder:decoder>
</decoder:decoder-config>
