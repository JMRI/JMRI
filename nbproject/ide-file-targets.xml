<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="JMRI-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target depends="runtime-library-selection" name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <java-compile javac.includes="${files}" javac.source="${source}"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-test">
        <fail unless="files">Must set property 'files'</fail>
        <java-compile javac.classpath="test.class.path" javac.includes="${files}" javac.source="${test}" javac.target="${testtarget}"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-tmp">
        <fail unless="files">Must set property 'files'</fail>
        <java-compile javac.includes="${files}" javac.source="${genjavasrcdir}"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-test">
        <fail unless="run.class">Must set property 'test.includes'</fail>
        <ant antfile="${ant.script}" inheritall="false" target="test-single"/>
    </target>

    <target name="-debug-apply-fix">
        <java-compile javac.source="${debug.fix.src}" javac.target="${debug.fix.target}"/>
        <nbjpdareload>
            <fileset dir="${debug.fix.target}">
                <include name="${fix.file}*.class"/>
            </fileset>
        </nbjpdareload>
    </target>
    
    <target name="debug-apply-fix-in-src">
        <antcall target="-debug-apply-fix">
            <param name="debug.fix.src" value="${source}"/>
            <param name="debug.fix.target" value="${target}"/>
        </antcall>
    </target>
    <target name="debug-apply-fix-in-test" depends="JMRI.tests">
        <nbjpdareload>
            <fileset dir="${testtarget}">
                <include name="${fix.file}*.class"/>
            </fileset>
        </nbjpdareload>
    </target>
    <target name="debug-apply-fix-in-tmp" depends="JMRI.compile-generated-source">
        <nbjpdareload>
            <fileset dir="${target}">
                <include name="${fix.file}*.class"/>
            </fileset>
        </nbjpdareload>
    </target>
    <import file="jdk.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-src" depends="-jdk-init">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <ant antfile="build.xml" inheritall="false" target="debug"/>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath>
                <pathelement path="java/tmp:target/classes:lib/xercesImpl.jar:lib/gluegen-rt.jar:lib/commons-csv-1.7.jar:lib/jdom2-2.0.6.jar:lib/jhall.jar:lib/jinput.jar:lib/jmdns-3.5.5.jar:lib/joal.jar:lib/openlcb.jar:lib/jlfgr-1_0.jar:lib/junit-4.12.jar:lib/jython-standalone-2.7.1.jar:lib/log4j-1.2.17.jar:lib/purejavacomm-1.0.1.jar:lib/vecmath-1.5.2.jar:lib/mailapi.jar:lib/smtp.jar:lib/spotbugs-annotations.jar:lib/jsr305.jar:lib/WinRegistry-4.4.jar:lib/AppleJavaExtensions.jar:lib/jackson-annotations-2.10.0.jar:lib/jackson-core-2.10.0.jar:lib/jackson-databind-2.10.0.jar:lib/i18nchecker.jar:lib/xercesImpl.jar:lib/commons-lang3-3.7.jar:lib/commons-compress-1.18.jar:lib/slf4j-api-1.7.25.jar:lib/slf4j-log4j12-1.7.25.jar:lib/jul-to-slf4j-1.7.25.jar:lib/jetty-http-9.4.26.v20200117.jar:lib/jetty-io-9.4.26.v20200117.jar:lib/jetty-server-9.4.26.v20200117.jar:lib/jetty-util-9.4.26.v20200117.jar:lib/websocket-api-9.4.26.v20200117.jar:lib/websocket-servlet-9.4.26.v20200117.jar:lib/javax.servlet-api-3.1.0.jar:lib/jetty-security-9.4.26.v20200117.jar:lib/jetty-servlet-9.4.26.v20200117.jar:lib/websocket-client-9.4.26.v20200117.jar:lib/websocket-common-9.4.26.v20200117.jar:lib/websocket-server-9.4.26.v20200117.jar:lib/pi4j-core-1.2.jar:lib/commons-io-2.6.jar:lib/bluecove-2.1.1-SNAPSHOT.jar:lib/bluecove-bluez-2.1.1-SNAPSHOT.jar:lib/bluecove-gpl-2.1.1-SNAPSHOT.jar:lib/beansbinding-1.2.1.jar:lib/jna-4.4.0.jar:lib/jna-platform-4.4.0.jar:lib/xbee-java-library-1.2.1.jar:lib/usb-api-1.0.2.jar:lib/org-openide-util-lookup-RELEASE110.jar:lib/hid4java-0.5.0.jar:lib/jcip-annotations-1.0.jar:lib/commons-text-1.2.jar:lib/json-schema-validator-1.0.28.jar:lib/mqtt-client-0.4.0.jar:lib/jsplitbutton-1.3.1.jar:lib/thumbnailator-0.4.8.jar:lib/jinputvalidator-0.8.0.jar:lib/assertj-core-3.12.0.jar"/>
